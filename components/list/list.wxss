/* components/list/list.wxss */
.list{
  width: 94%;
  height: auto;
  margin: 0 3%;
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
  text-align: center;
}
.list .list-content{
  width: 44%;
  height: 350rpx;
  padding: 2%;
  border-radius: 20rpx;
  box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.07);
  margin-bottom: 20rpx;
}
.list .list-content image{
  width: 284rpx;
  height: 260rpx;
  border-radius: 10rpx 10rpx 0 0;
  margin-top: 10rpx;
}
.list .list-content .list-name{
  width: 100%;
  height: 40rpx;
  display: block;
  float: left;
  overflow: hidden;
}