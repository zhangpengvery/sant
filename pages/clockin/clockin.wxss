/* pages/clockin/clockin.wxss */
@import "/assets/fonts/iconfont.wxss";
page{
  background: #f6f6f6;
}
.header{
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 90%;
  height: 144rpx;
  margin: 20rpx 3%;
  padding: 0 2%;
  background: #fff;
  border-radius: 20rpx;
}
.box{
  display: flex;
}
.header-yuan{
  width: 72rpx;
  height: 72rpx;
  border-radius: 50%;
  background: #F9B236;
  text-align: center;
  line-height: 72rpx;
  color: #fff;
  font-size: 28rpx;
  margin-right: 20rpx;
}
.header-name{
  font-size: 32rpx;
  font-weight: bold;
}
.header-text{
  font-size: 22rpx;
  color: #999;
  margin-top: 10rpx;
}
.box-fatr{
  display: flex;
}
.box2{
  width: 80rpx;
  text-align: center;
}
.box2 .iconfont{
  color: #5A5A5A;
  font-size: 40rpx;
}
.box2 .header-rigth{
  color: #999;
  font-size: 20rpx;
  margin-top: 10rpx;
}
.content{
  width: 88%;
  height: 1000rpx;
  margin: 0 3%;
  padding: 0 3%;
  background: #fff;
  border-radius: 20rpx;
  overflow: hidden;
}
.box3{
  margin-top: 34rpx;
  display: flex;
  justify-content: space-between;
}
.time{
  display: flex;
  justify-content: center;
  flex-direction: column;
  align-items: end;
  width: 44%;
  height: 130rpx;
  padding-left: 5%;
  background: #F6F6F6;
  border-radius: 20rpx;
}
.time .sb-time{
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
}
.time .sbdk-time{
  display: flex;
  height: 50rpx;
  align-items: center;
}
.time-yuan{
  color: #F9B236;
  font-size: 28rpx;
}
.time-text{
  font-size: 22rpx;
  color: #999;
  margin-left: 10rpx;
}
.clockin{
  width: 250rpx;
  height: 250rpx;
  border-radius: 50%;
  background: linear-gradient(180deg, #FFCD77 0%, #F9B236 100%);
  box-shadow: 0px 6px 6px rgba(249, 178, 54, 0.34);
  margin: 200rpx auto 40rpx auto;
  color: #fff;
  text-align: center;
  overflow: hidden;
}
.clockin2{
  background: linear-gradient(180deg, #7daeff 0%, #568fef 100%);
  box-shadow: 0px 6px 6px rgba(54, 145, 249, 0.34);
}
.clockin-text{
  font-size: 38rpx;
  font-weight: 500;
  margin: 70rpx 0 20rpx 0;
}
.clockin-time{
  font-size: 28rpx;
  opacity: 0.61;
}
.scope{
  height: 40rpx;
  display: flex;
  justify-content: center;
  font-size: 22rpx;
  align-items: center;
}
.clockin-scope{
  color: #999;
}
.scope-address{
  color: #5E5E5E;
}