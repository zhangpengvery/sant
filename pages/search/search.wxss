.nav-fater{
  position: relative;
  width: 100%;
  display: flex;
}
.back{
  position: absolute;
  bottom: 20rpx;
  margin: 0 20rpx;
}
.navber-content{
  position: absolute;
  line-height: 60rpx;
  left: 60rpx;
  bottom: 10rpx;
  width: 350rpx;
  font-size: 26rpx;
}
.navber-content input{
  padding-left: 60rpx;
  border-radius: 136rpx;
  width: 80%;
  height: 60rpx;
  background: #f5f5f5;
}
.navber-content .searchicon{
  position: absolute;
  top: 2rpx;
  left: 20rpx;
  color: #1A1311;
}
.sosuo{
  position: absolute;
  bottom: 20rpx;
  left: 400rpx;
  margin-left: 20rpx;
