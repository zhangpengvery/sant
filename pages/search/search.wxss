}
.search-content{
  width: 94%;
  margin: 0 3%;
}
.search-content .title{
  margin-top: 20rpx;
  font-size: 32rpx;
  color: #333;
}
.search-content .search-rm{
  display: flex;
  flex-wrap: wrap;
}
.search-content .search-rm .search-box{
  padding: 0 20rpx;
  margin-right: 40rpx;
  margin-top: 20rpx;
  height: 44rpx;
  line-height: 44rpx;
  border-radius: 110rpx;
  font-size: 26rpx;
  background: #f2f2f2;
