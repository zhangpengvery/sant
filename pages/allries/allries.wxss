/* pages/allries/allries.wxss */
@import "/assets/fonts/iconfont.wxss";
.aui-content{
  display: flex;
  width: 100%;
  height: 74rpx;
  box-shadow: 0px 0px 4px rgba(0, 0, 0, 0.14);
  background: #fff;
  z-index: 10;
}
.aui-content .juli-left{
  display: flex;
  height: 60rpx;
  width: 50%;
  line-height: 70rpx;
  justify-content: center;
  font-size: 26rpx;
  color: #333;
}
.aui-content .active {
  color: #F9B236;
}
.aui-content .juli-right{
  display: flex;
  height: 60rpx;
  width: 50%;
  line-height: 70rpx;
  justify-content: center;
  font-size: 26rpx;
  color: #333;
}
.aui-content .cityactive{
  color: #F9B236;
}
.xiabiao{
  margin-left: 6rpx;
  font-size: 12rpx;
}
.mask {
  width: 100%;
  height: 70%;
  position: fixed;
  bottom: 0;
  left: 0;
  background: #000;
  z-index: 1;
  opacity: 0.7;
 }
 .showjuli{
  position: fixed;
  top: 207rpx;
  left: 0;
  width: 94%;
  height: 360rpx;
  padding: 0 3%;
  background: #fff;
  z-index: 10;
  text-align: center;
}
.showjuli view{
  height: 70rpx;
  line-height: 70rpx;
  border-bottom: 2rpx solid #f6f6f6;
  color: #333;
  font-size: 26rpx;
}
.showcity{
  display: flex;
  position: fixed;
  top: 207rpx;
  left: 0;
  width: 94%;
  height: 500rpx;
  padding: 0 3%;
  background: #fff;
  z-index: 10;
}
.showcity .cityright{
  width: 100%;
  height: auto;
}
.showcity .cityright .right-box{
  float: left;
  height: 50rpx;
  line-height: 50rpx;
  font-size: 26rpx;
  margin: 0 10rpx;
}
.list{
  width: 94%;
  height: auto;
  margin: 0 3%;
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
  text-align: center;
}
.list .list-content{
  position: relative;
  width: 44%;
  height: 295rpx;
  padding: 2%;
  border-radius: 20rpx;
  box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.07);
  margin-top: 20rpx;
}
.list .list-content image{
  width: 284rpx;
  height: 175rpx;
  border-radius: 10rpx 10rpx 0 0;
  margin-top: 10rpx;
}
.list .list-content .list-name{
  text-align: left;
  padding-left: 3%;
  width: 93%;
  font-size: 28rpx;
  color: #343232;
  height: 40rpx;
  display: block;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin: 10rpx 0 5rpx 0;
}
.list .list-content .list-price{
  display: block;
  padding-left: 3%;
  width: 93%;
  text-align: left;
  font-size: 28rpx;
  color: #D90F0F;
}
.list .list-content .list-price ::before{
  content: "ï¿¥";
}
.list .list-content .list-xin{
  position: absolute;
  font-size: 24rpx;
  bottom: 30rpx;
  right: 30rpx;
  color: #F9B236;
}