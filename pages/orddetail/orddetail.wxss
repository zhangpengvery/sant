/* pages/orddetail/orddetail.wxss */
page{
  background: #f6f6f6;
}
.header{
  position: relative;
  width: 100%;
  height: 424rpx;
  overflow: hidden;
  background: linear-gradient(154deg, #FFC765 0%, #FC9E32 100%);
}
.back{
  position: fixed;
  height: 50rpx;
  line-height: 50rpx;
  left: 20rpx;
  color: #000;
  z-index: 3;
}
.title{
  margin-top: 80rpx;
  text-align: center;
  color: #fff;
  font-size: 40rpx;
}
.header-text{
  display: flex;
  justify-content: center;
  margin: 10rpx 13% 40rpx 13%;
}
.header-text .text-left{
  color: #fff;
  font-size: 26rpx;
}
.header-con{
  position: relative;
  display: flex;
  width: 84%;
  height: 134rpx;
  margin: 0 5%;
  padding: 20rpx 3%;
  background: #fff;
  border-radius: 20rpx;
}
.header-con .iconfont{
  color: #F9B236;
  margin-right: 20rpx;
}
.con-text {
  width: 80%;
  height: 80rpx;
}
.con-text .text-top{
  color: rgb(127, 127, 127);
  font-size: 26rpx;
}
.con-text .text-btm{
  margin-bottom: 10rpx;
  font-size: 28rpx;
  font-weight: bold;
}
.dizhi{
  height: 50rpx;
  position: absolute;
  right: 20rpx;
  top: 50%;
  margin-top: -25rpx;
}
.product{
  display: flex;
  position: relative;
  width: 90%;
  padding: 20rpx 5%;
  height: 168rpx;
  margin-top: 20rpx;
  background: #fff;
  border-radius: 20rpx;
}
.product-img{
  width: 160rpx;
  height: 160rpx;
  margin-right: 20rpx;
}
.product-img image{
  width: 100%;
  height: 100%;
  border-radius: 20rpx;
}
.product-text .product-title{
  color: #333;
  font-size: 28rpx;
  margin: 10rpx 0 20rpx 0;
}
.product-jg{
  color: #BA1515;
  font-size: 34rpx;
  font-weight: bold;
}
.shul{
  color: #999;
  font-size: 26rpx;
  position: absolute;
  bottom: 40rpx;
  right: 40rpx;
}
.body{
  width: 90%;
  padding: 0 5%;
  margin: 20rpx 0 120rpx 0;
  height: 510rpx;
  background: #fff;
  overflow: hidden;
}
.body-title{
  font-weight: bold;
  font-size: 28rpx;
  margin-top: 20rpx ;
}
.body-text{
  margin-top: 30rpx;
  color: #333;
  font-size: 28rpx;
}
.xian{
  border-bottom: 2rpx solid #F4F4F4;
  margin-top: 20rpx;
}
.body-box{
  display: flex;
  justify-content: space-between;
}
.body-hong{
  color: #BA1515;
  font-size: 32rpx;
  margin-top: 20rpx;
}
.body-text text{
  color: #9A9A9A;
}
.footer{
  display: flex;
  justify-content: flex-end;
  position: fixed;
  bottom: 0;
  left: 0;
  width: 60%;
  padding-left: 40%;
  height: 104rpx;
  background: #fff;
  text-align: center;
  align-items: center;
  font-size: 28rpx;
}
.footer-left{
  width: 190rpx;
  height: 72rpx;
  border: 2rpx solid #707070;
  line-height: 72rpx;
  color: #999;
  border-radius: 94rpx;
  margin-right: 20rpx;
}
.footer-right{
  width: 190rpx;
  height: 72rpx;
  border: 2rpx solid #F9B236;
  line-height: 72rpx;
  color: #fff;
  background: #F9B236;
  border-radius: 94rpx;
  margin-right: 20rpx;
}