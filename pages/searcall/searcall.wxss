/* pages/searcall/searcall.wxss */
page{
  background: #F6F6F6;
}
.search-wipe{
  width: 100%;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 99;
  background: #fff;
}
.search-wipe .nav-fater{
  position: relative;
  width: 100%;
  height: 100%;
}
.search-wipe .nav-fater .navber-content{
  width: 40%;
  position: absolute;
  left: 170rpx;
  bottom: 17rpx;
  line-height: 60rpx;
}
.search-wipe .navber-content .input{
  height: 60rpx;
  font-size: 26rpx;
  border-radius: 15px;
  padding: 0 0 0 5%;
  background: #F4F4F4;
}
.input-color{
  background: #f5f5f5;
}
.search-wipe .nav-title{
  position: absolute;
  bottom: 4rpx;
  transform: translate(-50%,-50%);
}
.address{
  position: absolute;
  bottom: 22rpx;
  left: 20rpx;
}
.header{
  display: flex;
  justify-content: space-around;
  width: 100%;
  height: 74rpx;
  background: #fff;
  line-height: 74rpx;
}
.header-name{
  height: 56rpx;
  font-size: 26rpx;
  color: #333;
}
.activecol{
  color: #F9B236;
  border-bottom: 2rpx solid #F9B236;
}
.list{
  width: 94%;
  height: auto;
  margin: 0 3%;
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
  text-align: center;
}
.list .list-content{
  position: relative;
  width: 48%;
  height: 350rpx;
  border-radius: 20rpx;
  box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.07);
  margin-top: 20rpx;
  background: #fff;
}
.list .list-content image{
  width: 100%;
  height: 230rpx;
  border-radius: 20rpx 20rpx 0 0;
}
.list .list-content .list-name{
  text-align: left;
  padding-left: 3%;
  width: 93%;
  font-size: 28rpx;
  color: #343232;
  height: 40rpx;
  display: block;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin: 10rpx 0 5rpx 0;
}
.list .list-content .list-price{
  display: block;
  padding-left: 3%;
  width: 93%;
  text-align: left;
  font-size: 28rpx;
  color: #D90F0F;
}
.list .list-content .list-price ::before{
  content: "ï¿¥";
}
.list .list-content .list-xin{
  position: absolute;
  font-size: 24rpx;
  bottom: 30rpx;
  right: 30rpx;
  color: #F9B236;
}
.kong{
  width: 100%;
  text-align: center;
}
.kong .kong-box{
  margin-top: 300rpx;
  width: 100%;
  color: #ababab;
  font-size: 20rpx;
}
.textnull{
  width: 100%;
  height: 600rpx;
  line-height: 600rpx;
  font-size: 30rpx;
  color: #ababab;
  text-align: center;
}