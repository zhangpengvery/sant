/* pages/stores/stores.wxss */
@import "/assets/fonts/iconfont.wxss";
.aui-content{
  display: flex;
  position: fixed;
  width: 100%;
  height: 74rpx;
  box-shadow: 0px 0px 4px rgba(0, 0, 0, 0.14);
}
.aui-content .juli-left{
  display: flex;
  height: 60rpx;
  width: 50%;
  line-height: 70rpx;
  justify-content: center;
  font-size: 26rpx;
  color: #333;
  border-right: 1px solid #c2c2c2;
}
.aui-content .juli-right{
  border-left: 1px solid #c2c2c2;
  border-right: 0;
}
.xiabiao{
  margin-left: 6rpx;
  font-size: 12rpx;
}
.mask {
  width: 100%;
  height: 70%;
  position: fixed;
  bottom: 0;
  left: 0;
  background: #000;
  z-index: 1;
  opacity: 0.7;
 }
.content{
  width: 94%;
  margin: 0 3%;
  overflow: hidden;
}
.content .fater{
  position: relative;
  width: 92%;
  height: 210rpx;
  margin: 20rpx 1% 10rpx 1%;
  padding: 3%;
  display: flex;
  box-shadow: 0px 0px 4px rgba(0, 0, 0, 0.14);
  border-radius: 20rpx;
}
.content .fater .stores-img{
  height: 206rpx;
  width: 196rpx;
}
.content .fater .stores-img image{
  width: 100%;
  height: 100%;
}
.content .fater .stores-text{
  position: relative;
  margin-left: 20rpx;
  width: 425rpx;
  height: 206rpx;
}
.stores-title{
  font-size: 30rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}
.stores-pho{
  height: 32rpx;
  line-height: 32rpx;
}
.stores-pho .text-dianhua{
  color: #F9B236;
}
.mapgo{
  width: 152rpx;
  height: 44rpx;
  background: #F9B236;
  border-radius: 74rpx;
  font-size: 24rpx;
  color: #fff;
  text-align: center;
  line-height: 44rpx;
  margin-top: 34rpx;
}
.mapgo .mapgo-icon{
  font-size: 20rpx;
}
.length{
  position: absolute;
  bottom: 0;
  right: 0;
}
.stores-icon{
  color: #B4B4B4;
  font-size: 20rpx;
}
.text-fz{
  font-size: 22rpx;
  color: #999;
}
.text-margin{
  margin-left: 10rpx;
}