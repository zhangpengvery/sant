/* pages/stores/stores.wxss */
@import "/assets/fonts/iconfont.wxss";
.aui-content{
  display: flex;
  position: fixed;
  width: 100%;
  height: 74rpx;
  box-shadow: 0px 0px 4px rgba(0, 0, 0, 0.14);
  background: #fff;
  z-index: 10;
}
.aui-content .juli-left{
  display: flex;
  height: 60rpx;
  width: 50%;
  line-height: 70rpx;
  justify-content: center;
  font-size: 26rpx;
  color: #333;
}
.aui-content .active {
  color: #F9B236;
}
.aui-content .juli-right{
  display: flex;
  height: 60rpx;
  width: 50%;
  line-height: 70rpx;
  justify-content: center;
  font-size: 26rpx;
  color: #333;
}
.aui-content .cityactive{
  color: #F9B236;
}
.xiabiao{
  margin-left: 6rpx;
  font-size: 12rpx;
}
.mask {
  width: 100%;
  height: 70%;
  position: fixed;
  bottom: 0;
  left: 0;
  background: #000;
  z-index: 1;
  opacity: 0.7;
 }
.content{
  width: 94%;
  margin: 0 3%;
  overflow: hidden;
  margin-bottom: 120rpx;
}
.content .fater{
  position: relative;
  width: 92%;
  height: 210rpx;
  margin: 20rpx 1% 10rpx 1%;
  padding: 3%;
  display: flex;
  box-shadow: 0px 0px 4px rgba(0, 0, 0, 0.14);
  border-radius: 20rpx;
}
.content .fater .stores-img{
  height: 206rpx;
  width: 196rpx;
}
.content .fater .stores-img image{
  width: 100%;
  height: 100%;
}
.content .fater .stores-text{
  position: relative;
  margin-left: 20rpx;
  width: 425rpx;
  height: 206rpx;
}
.stores-title{
  font-size: 30rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}
.stores-pho{
  height: 32rpx;
  line-height: 32rpx;
}
.stores-pho .text-dianhua{
  color: #F9B236;
}
.mapgo{
  width: 152rpx;
  height: 44rpx;
  background: #F9B236;
  border-radius: 74rpx;
  font-size: 24rpx;
  color: #fff;
  text-align: center;
  line-height: 44rpx;
  margin-top: 34rpx;
}
.mapgo .mapgo-icon{
  font-size: 20rpx;
}
.length{
  position: absolute;
  bottom: 0;
  right: 0;
}
.stores-icon{
  color: #B4B4B4;
  font-size: 20rpx;
}
.text-fz{
  font-size: 22rpx;
  color: #999;
}
.text-margin{
  margin-left: 10rpx;
}
.showjuli{
  position: fixed;
  top: 207rpx;
  left: 0;
  width: 94%;
  height: 360rpx;
  padding: 0 3%;
  background: #fff;
  z-index: 10;
  text-align: center;
}
.showjuli view{
  height: 70rpx;
  line-height: 70rpx;
  border-bottom: 2rpx solid #f6f6f6;
  color: #333;
  font-size: 26rpx;
}
.showcity{
  display: flex;
  position: fixed;
  top: 207rpx;
  left: 0;
  width: 94%;
  height: 500rpx;
  padding: 0 3%;
  background: #fff;
  z-index: 10;
}
.showcity .city-content{
  width: 100%;
  height: 100%;
}
.city-content .city-box{
  width: 100%;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  font-size: 26rpx;
}
.city-content .cityac{
  color: #F9B236;
}
.showcity .cityright{
  width: 70%;
  height: auto;
}
.showcity .cityright .right-box{
  float: left;
  height: 50rpx;
  line-height: 50rpx;
  font-size: 26rpx;
  margin: 0 10rpx;
}
.dixian{
  width: 100%;
  height: 60rpx;
  text-align: center;
  font-size: 24rpx;
  color: #ababab;
}
.tabbar{
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  position: fixed;
  bottom: 0;
  left: 0;
  height: 118rpx;
  background-image: url(https://jbccs.com/./Upload/image/2021-05-07/6094b55ac7b98.png);
  background-repeat:no-repeat; 
  background-size:100% 100%;
}
.tabbar-box{
  width: 20%;
  height: 100rpx;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  align-items: center;
}
.tabbar-img{
  width: 54rpx;
  height: 54rpx;
}
.tabbar-text{
  font-size: 24rpx;
}
.tabbar-gif{
  width: 100rpx;
  height: 100rpx;
  position: absolute;
  top: -34rpx;
  left: 50%;
  margin-left: -50rpx;
}