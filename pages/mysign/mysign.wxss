/* pages/mysign/mysign.wxss */
page{
  background: #F4F4F4;
}
.map-box{
  position: relative;
}
.user{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 300rpx;
  background: linear-gradient(180deg, rgba(255, 255, 255, 0) 0%, rgba(255, 255, 255, 0.5) 67%, rgba(255, 255, 255, 0.8) 100%);
}
.user-tx{
  position: absolute;
  bottom: 20rpx;
  left: 30rpx;
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  border: 1rpx solid #F9B236;
}
.user-tx image{
  width: 100%;
  height: 100%;
  border-radius: 50%;
}
.user-name{
  position: absolute;
  bottom: 80rpx;
  left: 160rpx;
  font-size: 36rpx;
  font-weight: bold;
}
.user-total{
  position: absolute;
  bottom: 40rpx;
  left: 160rpx;
  color: #777777;
  font-size: 28rpx;
}
.user-total text{
  color: #F9B236;
}
.list-time{
  padding-left: 60rpx;
  color: #777;
  font-size: 24rpx;
  height: 60rpx;
  line-height: 80rpx;
  background: #fff;
}
.list{
  width: 94%;
  padding: 0 3% 20rpx 3%;
  height:auto;
  overflow: hidden;
  background: #fff;
  margin-bottom: 20rpx;
}
.list-box{
  width: 98%;
  margin: 20rpx 1% 5rpx 1%;
  border-radius: 16rpx;
  box-shadow: 0px 0px 3px rgba(0, 0, 0, 0.16);
  /* margin-top: 20rpx; */
}
.list-header{
  width: 100%;
  height: 100rpx;
  display: flex;
  justify-content: end;
  align-items: center;
  border-bottom: 1rpx solid #f4f4f4;
}
.list-tx{
  font-weight: bold;
  font-size: 32rpx;
  margin: 0 10rpx 0 20rpx;
}
.list-img{
  width: 120rpx;
  height: 120rpx;
  margin: 20rpx 20rpx 0 0;
  border: 1rpx solid #ccc;
}
.list-tx image{
  width: 100%;
  height: 100%;
  border-radius: 50%;
}
.list-name{
  color: #343232;
  font-size: 32rpx;
  font-weight: bold;
}
.list-content{
  width: 94%;
  padding: 20rpx 3%;
}
.list-title{
  font-size: 26rpx;
  color: #777777;
}
.list-text{
  font-size: 28rpx;
  color: #333;
  margin-top: 8rpx;
}
.gittime{
  position: fixed;
  top: 60rpx;
  left: 30rpx;
  width: 220rpx;
  height: 60rpx;
  box-shadow: 0px 0px 3px rgba(0, 0, 0, 0.16);
  border-radius: 32rpx;
  background: #fff;
  font-size: 24rpx;
  color: #777;
}
.gittime-box{
  height: 60rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.picker{
  margin: 0 8rpx;
}
.wushujucs{
  width: 100%;
  margin-top: 300rpx;
  text-align: center;
  font-size: 24rpx;
  color: #ababab;
}
.wushu-img{
  width: 44%;
  margin: 0 28%;
  height: 180rpx;
}
.wushu-img image{
  width: 100%;
  height: 100%;
}
.dixian{
  width: 100%;
  height: 50rpx;
  text-align: center;
  font-size: 24rpx;
  color: #ababab;
}