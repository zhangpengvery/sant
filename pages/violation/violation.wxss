/* pages/violation/violation.wxss */
page{
	background: #F6F6F6;
}
.header{
	position: fixed;
	top: 0;
	left: 0;
	width: 100%;
	height: 342rpx;
	z-index: -1;
}
.header image{
	width: 100%;
	height: 100%;
}
.content{
	width: 94%;
	margin: 0 3%;
	background: #fff;
	font-size: 30rpx;
	border-radius: 20rpx;
}
.content-box{
	display: flex;
	height: 120rpx;
	border-bottom: 2rpx solid #F4F4F4;
	justify-content: center;
	align-items: center;
	color: #E28921;
}
.cont-text{
	font-size: 32rpx;
	font-weight: bold;
	margin-left: 10rpx;
}
.box{
	width: 90%;
	padding: 0 3%;
	margin: 0 2%;
	height: 100rpx;
	border-bottom: 2rpx solid #F4F4F4;
	display: flex;
	justify-content: flex-start;
	align-items: center;
}
.box-left{
	width: 30%;
}
.shengfen-box{
	display: flex;
	color: #E28921;
}
.jianxie{
	position: fixed;
	bottom: 0;
	right: 0;
	width: 80%;
	height: 95%;
	border-radius: 20rpx 0 0 0;
	background: #fff;
	z-index: 102;
}
.jianxie-box{
	float: left;
	width: 148rpx;
	height: 200rpx;
	border-bottom: 1rpx solid #ECECEC;
	border-right: 1rpx solid #ECECEC;
	text-align: center;
}
.jianxie-da{
	font-size: 64rpx;
	font-weight: 500;
	margin-top: 20rpx;
}
.jianxie-xiao{
	font-size: 30rpx;
	color: #777;
}
.marker{
	width: 100%;
	height: 100%;
	position: fixed;
	bottom: 0;
	left: 0;
	background: #707070;
	z-index: 3;
	opacity: 0.6;
}
.chaxun{
	width: 90%;
	margin: 80rpx 5% 0 5%;
	height: 96rpx;
	font-size: 36rpx;
	color: #333;
	text-align: center;
	border-radius: 48rpx;
	background: #FFCC32;
	line-height: 96rpx;
}