/* pages/candetail/candetail.wxss */
.user{
  width: 94%;
  margin: 20rpx 3% 0 3%;
  border-radius: 20rpx;
  box-shadow: 0px 0px 4px rgba(0, 0, 0, 0.14);
}
.content-user{
  display: flex;
  width: 100%;
  height: 100rpx;
  padding: 40rpx 0;
}
.content-user .user-tx{
  width: 84rpx;
  height: 84rpx;
  margin: 0 20rpx;
  border-radius: 50%;
  border: 2rpx solid #000;
  background: #ccc;
}
.content-user .user-tx image{
  width: 100%;
  height: 100%;
  border-radius: 50%;
}
.user-name{
  color: #333;
  font-size: 26rpx;
  margin-top: 10rpx ;
}
.content-user .user-zl .user-img{
  position: relative;
  width: 80rpx;
  height: 22rpx;
  margin-bottom: 30rpx;
}
.content-user .user-zl .user-img image{
  width: 100%;
  height: 100%;
}
.content-user .user-zl .user-img .vip-text{
  position: absolute;
  top: 12rpx;
  left: 4rpx;
  font-size: 14rpx;
  color: #fff;
}
.users-name{
  width: 94%;
  margin: 0 3%;
  color: #333;
  font-size: 26rpx;
  height: 81rpx;
  line-height: 81rpx;
  border-bottom: 2rpx solid #f4f4f4;
}
.liuyan{
  height: 200rpx;
  line-height: 40rpx;
  margin-top: 20rpx;
}
.bddh{
  position: fixed;
  bottom: 40rpx;
  left: 0;
  width: 94%;
  margin: 0 3%;
  height: 94rpx;
  border-radius: 94rpx;
  background: #F9B236;
  color: #fff;
  text-align: center;
  line-height: 94rpx;
  font-size: 32rpx;
  font-weight: bold;
  z-index: 10;
}