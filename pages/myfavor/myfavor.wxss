/* pages/myfavor/myfavor.wxss */
@import "/assets/fonts/iconfont.wxss";
page{
  background: #f6f6f6;
}
.header{
  position: fixed;
  top: 0;
  left: 0;
  width: 94%;
  padding: 0 3%;
  height: 100rpx;
  display: flex;
  justify-content: space-between;
  text-align: center;
  align-items: center;
  background: #fff;
}
.header .header-text{
  width: 100rpx;
  height: 40rpx;
  font-size: 26rpx;
  background: #f6f6f6;
  border-radius: 26rpx;
}
.header .huang{
  color: #F9B236;
  border: 1rpx solid #F9B236;
  background: #fff;
}
.header-r{
  font-size: 22rpx;
}
.header-text text{
  font-size: 12rpx;
}
.showcscz{
  position: fixed;
  top: 100rpx;
  display: flex;
  justify-content: end;
  width: 100%;
  height: 80rpx;
  position: fixed;
  background: #fff;
  z-index: 10;
  text-align: center;
  align-items: center;
}
.showcscz .showcs{
  width: 100rpx;
  height: 40rpx;
  background: #f6f6f6;
  border-radius: 26rpx;
  font-size: 26rpx;
  margin: 0 20rpx;
}
.showcscz .huang{
  color: #F9B236;
  border: 1rpx solid #F9B236;
  background: #fff;
}
.mask {
  width: 100%;
  height: 90%;
  position: fixed;
  bottom: 0;
  left: 0;
  background: #000;
  z-index: 1;
  opacity: 0.7;
 }
.body{
  width: 94%;
  margin: 120rpx 3%  88rpx 3%;
  justify-content: space-between;
  align-items: center;
}
.cart-goods{
  width: 94%;
  margin: 20rpx 3% 0;
  background: #fff;
  border-radius: 20rpx;
  overflow: hidden;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.cart-goods .cart-icon{
  width: 5%;
  text-align: center;
  margin-left: 1%;
}
.cart-goods .cart-img{
  width: 188rpx;
  height: 188rpx;
  margin: 20rpx 0;
}
.cart-goods .cart-img image{
  width: 100%;
  height: 100%;
  border-radius: 16rpx;
}
.cart-goods .goods-info{
  width: 60%;
  padding: 10rpx;
  box-sizing: border-box;
}
.cart-goods .goods-info .goods-title{
  width: 100%;
  color: #333;
  font-size: 30rpx;
  font-weight: bold;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.cart-goods .goods-info .goods-other{
  width: 100%;
  display: flex;
  justify-content: space-between;
  text-align: center;
  padding: 20rpx 20rpx 20rpx 0;
  box-sizing: border-box;
}
.cart-goods .goods-info .goods-other .goods-price{
  font-size: 30rpx;
  color: #BA1515;
  font-weight: 600;
  line-height: 50rpx;
}
.cart-goods .goods-info .goods-other .goods-price::before{
  content: "￥";
  font-size: 24rpx;
}
/* 底部导航 */
.cart-footer{
  width: 100%;
  position: fixed;
  bottom: 0rpx;
  background: #fff;
  border-top: 1px solid #efefef;
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 88rpx;
  line-height: 88rpx;
}
.cart-footer .cart-icon{
  display: flex;
  justify-content: center;
  align-items: center;
  height: 88rpx;
}
.cart-footer .cart-icon icon{
  margin: 45rpx 20rpx 0;
}
.cart-footer .gobuy{
  border: 1rpx solid #F9B236;
  color: #F9B236;
  width: 20%;
  height: 60rpx;
  border-radius: 50rpx;
  line-height: 60rpx;
  text-align: center;
  margin-right: 30rpx;
}