/* pages/join/join.wxss */
@import "/assets/fonts/iconfont.wxss";
.header-img{
  width: 100%;
  height: 312rpx;
}
.header-img image{
  width: 100%;
  height: 100%;
} 
.title{
  width: 95%;
  margin-left: 5%;
  height: 100rpx;
  font-size: 30rpx;
  font-weight: bold;
  line-height: 100rpx;
}
.gclc-icon{
  display: flex;
  justify-content: space-between;
  width: 90%;
  height: 170rpx;
  margin: 0 5%;
}
.icon-left{
  text-align: center;
  align-items: center;
}
.icon-left .yuan{
  font-size: 80rpx;
  color: #F9B236;
}
.icon-left .xiandan{
  color: #333;
  font-size: 26rpx;
  margin: 20rpx 0;
}
.content{
  width: 90%;
  margin: 0 5%;
  overflow: hidden;
}
.box{
  position: relative;
  display: flex;
  height: 60rpx;
  margin-bottom: 20rpx;
}
.box .box-inp{
  border-bottom: 2rpx solid #DCDCDC;
}
.box-title{
  width: 22%;
  color: #333;
  font-size: 30rpx;
}
.box-inp{
  width: 78%;
  position: relative;
  font-size: 26rpx;
}
.code{
  position: absolute;
  top: 0;
  right: 0;
  width: 160rpx;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  border: 2rpx solid #F9B236;
  color: #F9B236;
  font-size: 28rpx;
  border-radius: 8rpx;
  z-index: 10;
}
.jmpho{
  display: flex;
  width: 100%;
  height: 50rpx;
  text-align: center;
  justify-content: center;
  font-size: 22rpx;
  margin: 80rpx 0 130rpx 0;
}
.jmpho .iconfont{
  color: #F9B236;
  margin-right: 10rpx;
}
.ljfb{
  position: fixed;
  bottom: 40rpx;
  left: 0;
  width: 94%;
  margin: 0 3%;
  height: 94rpx;
  border-radius: 94rpx;
  background: #F9B236;
  color: #fff;
  text-align: center;
  line-height: 94rpx;
  font-size: 32rpx;
  font-weight: bold;
  z-index: 10;
}