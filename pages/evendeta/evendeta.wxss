/* pages/evendeta/evendeta.wxss */
@import "/assets/fonts/iconfont.wxss";
page{
  background: #F6F6F6;
}
.header-img{
  width: 100%;
  height: 600rpx;
}
.content{
  position: relative;
  width: 92%;
  margin: -20rpx 4% 0 4%;
  background: #fff;
  border-radius: 20rpx;
  overflow: hidden;
  z-index: 1;
}
.title{
  width: 94%;
  margin: 0 3%;
  display: flex;
  justify-content: space-between;
  height: 100rpx;
  align-items: center;
}
.title-text{
  font-size: 36rpx;
  font-weight: bold;
}
.title .iconfont{
  color: #FFBA43;
}
.buntt-css{
  height: 40rpx;
  background: #fff;
  padding: 0;
}
.time{
  width: 94%;
  margin: 0 3%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 200rpx;
  border-bottom: 1rpx solid #f4f4f4;
}
.time-box{
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
  font-size: 28rpx;
}
.time-box image{
  width: 80rpx;
  height: 80rpx;
}
.time-zi{
  margin: 10rpx 0 4rpx 0;
}
.time-text{
  font-size: 26rpx;
  color: #DF940F;
}
.details{
  width: 94%;
  margin: 0 3% 30rpx 3%;
  overflow: hidden;
}
.details-title{
  display: flex;
  margin: 20rpx 0 10rpx 0;
  height: 50rpx;
  line-height: 50rpx;
}
.details-title .iconfont{
  color: #777;
  margin-right: 10rpx;
}
.detitle-text{
  font-size: 30rpx;
  font-weight: bold;
}
.jianjie{
  font-size: 26rpx;
  color: #777;
}
.user{
  width: 92%;
  margin: 20rpx 4%;
  border-radius: 20rpx;
  background: #fff;
  overflow: hidden;
}
.user-box{
  width: 92%;
  height: 100rpx;
  margin: 0 4%;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.user-name{
  font-size: 30rpx;
  font-weight: bold;
}
.user-box input{
  text-align: end;
  font-size: 26rpx;
}
.baoming{
  width: 94%;
  margin: 20rpx 3%;
  border-radius: 94rpx;
  height: 90rpx;
  background: #F9B236;
  color: #fff;
  font-size: 34rpx;
  line-height: 90rpx;
  text-align: center;
}
.dizhi{
  width: 92%;
  margin: 0 4% 60rpx 4%;
  background: #fff;
  border-radius: 20rpx;
  height: 160rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.dizhi-box{
  width: 94%;
  margin: 0 3%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 26rpx;
  height: 60rpx;
}
.dizhi-text{
  width: 85%;
}
.huang{
  color: #F9B236;
}
.guize{
  width: 84%;
  margin: 20rpx 4%;
  padding: 30rpx 4%;
  background: #fff;
  border-radius: 20rpx;
}
.hdgz{
  width: 160rpx;
  height: 44rpx;
  line-height: 44rpx;
  background: #eaa631;
  color: #fff;
  font-size: 28rpx;
  border-radius: 28rpx;
  margin: 0 auto;
  text-align: center;
  margin-bottom: 20rpx;
}
.guize-text{
  width: 96%;
  font-size: 22rpx;
  margin: 6rpx 0;
}