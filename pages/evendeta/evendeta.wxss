/* pages/evendeta/evendeta.wxss */
@import "/assets/fonts/iconfont.wxss";
page{
  background: #F6F6F6;
}
.header-img{
  width: 100%;
  height: 600rpx;
}
.content{
  position: relative;
  width: 92%;
  margin: -20rpx 4% 0 4%;
  background: #fff;
  border-radius: 20rpx;
  overflow: hidden;
  z-index: 1;
}
.title{
  width: 94%;
  margin: 0 3%;
  display: flex;
  justify-content: space-between;
  height: 100rpx;
  align-items: center;
}
.title-text{
  font-size: 36rpx;
  font-weight: bold;
}
.title .iconfont{
  font-weight: bold;
  color: #FFBA43;
}
.buntt-css{
  height: 40rpx;
  background: #fff;
  padding: 0;
}
.time{
  width: 94%;
  margin: 0 3%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 200rpx;
  border-bottom: 1rpx solid #f4f4f4;
}
.time-box{
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
  font-size: 28rpx;
}
.time-box image{
  width: 80rpx;
  height: 80rpx;
}
.time-zi{
  margin: 10rpx 0 4rpx 0;
}
.time-text{
  font-size: 26rpx;
  color: #DF940F;
}
.details{
  width: 94%;
  margin: 0 3% 30rpx 3%;
  overflow: hidden;
}
.details-title{
  display: flex;
  margin: 20rpx 0 10rpx 0;
  height: 50rpx;
  line-height: 50rpx;
}
.details-title .iconfont{
  color: #777;
  margin-right: 10rpx;
}
.detitle-text{
  font-size: 30rpx;
  font-weight: bold;
}
.jianjie{
  font-size: 26rpx;
  color: #777;
}
.user{
  width: 92%;
  margin: 20rpx 4%;
  border-radius: 20rpx;
  background: #fff;
  overflow: hidden;
}
.user-box{
  width: 92%;
  height: 100rpx;
  margin: 0 4%;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.user-name{
  font-size: 30rpx;
  font-weight: bold;
}
.user-box input{
  text-align: end;
  font-size: 26rpx;
}
.baoming{
  width: 94%;
  margin: 20rpx 3%;
  border-radius: 94rpx;
  height: 90rpx;
  background: #F9B236;
  color: #fff;
  font-size: 34rpx;
  line-height: 90rpx;
  text-align: center;
}
.dizhi{
  width: 92%;
  margin: 0 4% 60rpx 4%;
  background: #fff;
  border-radius: 20rpx;
  height: 160rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.dizhi-box{
  width: 94%;
  margin: 0 3%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 26rpx;
  height: 60rpx;
}
.dizhi-text{
  width: 85%;
}
.huang{
  color: #F9B236;
}
.guize{
  width: 84%;
  margin: 20rpx 4%;
  padding: 30rpx 4%;
  background: #fff;
  border-radius: 20rpx;
}
.hdgz{
  width: 160rpx;
  height: 44rpx;
  line-height: 44rpx;
  background: #eaa631;
  color: #fff;
  font-size: 28rpx;
  border-radius: 28rpx;
  margin: 0 auto;
  text-align: center;
  margin-bottom: 20rpx;
}
.guize-text{
  width: 96%;
  font-size: 22rpx;
  margin: 6rpx 0;
}
.share{
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 300rpx;
  background: #f4f4f4;
  z-index: 300;
}
.share-box{
  display: flex;
  justify-content: space-around;
  height: 180rpx;
  background: #fff;
}
.share-left{
  display: flex;
  flex-direction: column;
  text-align: center;
  justify-content: center;
  align-items: center;
  font-size: 24rpx;
}
.share-imgbox{
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 10rpx;
  padding: 0;
  background: #fff;
}
.share-imgbox image{
  width: 100%;
  height: 100%;
}
.buntt-css{
  height: 40rpx;
  background: #fff;
  padding: 0;
  font-weight: 500;
  font-size: 24rpx;
}
.share-footer{
  margin-top: 20rpx;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  background: #fff;
}
.share-modal-bg{
  width: 572rpx;
  height: 760rpx;
  position: fixed;
  top: 10%;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
  margin:0 auto;
}
.share-modal-bg image{
  width: 100%;
  height: 100%;
  border-radius: 20rpx;
}
.marker{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: #000;
  opacity: 0.6;
  z-index: 20;
}
.open-seting-bg {
  position: fixed;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 1001;
}
.btn-openset {
  display: flex;
  justify-content: space-around;
  font-size: 30rpx;
  margin-top: 60rpx;
}
.set-title {
  font-size: 30rpx;
  margin-top: 40rpx;
}
.open-set-inner {
  width: 400rpx;
  height: 200rpx;
  position: absolute;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  margin: auto;
  background: #ffffff;
  padding: 30rpx;
  z-index: 1001;
}
.button-style {
  width: 100%;
  height: 100%;
  background: #fff;
  padding: 0 0 0;
  font-size: 30rpx;
  color: green;
  font-weight: 500;
}