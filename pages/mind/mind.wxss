/* pages/mind/mind.wxss */
.mind-navimg{
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 366rpx;
  z-index: -1;
}
.mind-navimg image{
  width: 100%;
  height: 100%;
}
.header{
  position: relative;
  width: 94%;
  margin: 0 3%;
  height: 100rpx;
  line-height: 100rpx;
  display: flex;
  text-align: center;
  color: #fff;
}
.header .weideng{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}
.header .dl-text{
  position: absolute;
  bottom: 0;
  left: 120rpx;
  font-size: 32rpx;
  font-weight: bold;
}
.header .user-name{
  font-weight: bold;
}
.header .shezhi{
  position: absolute;
  top: 0;
  right: 0;
}
.vip{
  position: absolute;
  top: 50rpx;
  left: 116rpx;
  width: 100rpx;
  height: 46rpx;
}
.vip image{
  width: 100%;
  height: 100%;
}
.vip text{
  position: absolute;
  top: 2rpx;
  left: 4rpx;
  color: #fff;
  font-size: 14rpx;
  font-weight: 400;
}
.jdt-img{
  width: 100%;
  /* margin: 0 15%; */
}
.jdt-img image{
  width: 100%;
  height: 100%;
}
.mindbody{
  width: 94%;
  margin: 0 3%;
}
.fater{
  margin-top: 20rpx;
  height: 272rpx;
  border-radius: 20rpx;
  background: #fff;
  box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.07);
}
.title{
  padding-top: 20rpx;
  font-weight: bold;
  margin: 0 0 0 20rpx;
  height: 98rpx;
  color: #343232;
  font-size: 32rpx;
}
.content{
  display: flex;
  justify-content: space-around;
}
.content-img{
  display: flex;
  flex-direction: column;
  text-align: center;
  align-items: center;
}
.content-img image{
  width: 25px;
  height: 28px;
}
.content-img .content-text{
  /* text-align: center; */
  font-size: 26rpx;
  width: 140rpx;
  margin-top: 10rpx;
}
.tabbar{
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  position: fixed;
  bottom: 0;
  left: 0;
  height: 118rpx;
  background-image: url(https://jbccs.com/./Upload/image/2021-05-07/6094b55ac7b98.png);
  background-repeat:no-repeat; 
  background-size:100% 100%;
}
.tabbar-box{
  width: 20%;
  height: 100rpx;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  align-items: center;
}
.tabbar-img{
  width: 54rpx;
  height: 54rpx;
}
.tabbar-text{
  font-size: 24rpx;
}
.tabbar-gif{
  width: 100rpx;
  height: 100rpx;
  position: absolute;
  top: -34rpx;
  left: 50%;
  margin-left: -50rpx;
}