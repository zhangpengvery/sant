/* pages/services/services.wxss */
page{
  background: #F9F9F9;
}
.header{
  width: 100%;
  height: 100rpx;
  display: flex;
  justify-content: space-around;
  line-height: 100rpx;
  background: #fff;
}
.nav-box{
  position: relative;
  font-size: 28rpx;
}
.active{
  color: #F9B236;
}
.nav-xian{
  position: absolute;
  bottom: 20rpx;
  left: 50%;
  transform: translate(-50%);
  width: 28rpx;
  height: 4rpx;
}
.bgactive{
  background: #F9B236;
}
.list{
  width: 94%;
  margin: 0 3%;
  overflow: hidden;
}
.user-con{
  position: relative;
  width: 96%;
  height: 210rpx;
  padding: 30rpx 2% 0 2%;
  margin: 20rpx 0 0 0;
  background: #fff;
  border-radius: 20rpx;
}
.user-con .user{
  position: relative;
  display: flex;
}
.user .user-img{
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
}
.user-img image{
  width: 100%;
  height: 100%;
  border-radius: 50%;
}
.user-xx{
  margin-left: 20rpx;
}
.user-name{
  font-size: 30prx;
  font-weight: bold;
  margin-bottom: 10rpx;
}
.juli{
  color: #999;
  font-size: 20rpx;
  margin-top: 10rpx;
}
.goging{
  position: relative;
  margin-left: 100rpx;
}
.gogingleft{
  width: 330rpx;
}
.gogingleft .icon{
  margin-top: 10rpx;
  font-size: 24rpx;
  color: #ACACAC;
}
.gogingleft .icon text{
  color: #666;
}
.shanchu{
  position: absolute;
  right: 20rpx;
  top: 50rpx;
  font-size: 30rpx;
  color: #777;
}
.junin{
  position: absolute;
  right: 20rpx;
  bottom: 86rpx;
  font-size: 20rpx;
  color: #999;
}
.user-pho{
  position: absolute;
  bottom: 30rpx;
  right: 20rpx;
  width: 150rpx;
  height: 50rpx;
  line-height: 50rpx;
  background: #F9B236;
  color: #fff;
  font-size: 20rpx;
  border-radius: 308rpx;
  text-align: center;
}
.user-pho .mapgo-icon{
  font-size: 20rpx;
}
.text-margin{
  margin-left: 10rpx;
}
.status{
  position: absolute;
  top: -12rpx;
  right: 60rpx;
  width: 100rpx;
  height: 100rpx;
}
.wushujucs{
  padding-top: 300rpx;
  width: 100%;
  text-align: center;
  font-size: 24rpx;
  color: #ababab;
}
.wushu-img{
  width: 44%;
  margin: 0 28%;
  height: 180rpx;
}
.wushu-img image{
  width: 100%;
  height: 100%;
}