<!--pages/saledetail/saledetail.wxml-->
<navbar params="{{params}}" />
<view class="content" style="margin-top:{{navH}}rpx">
  <view class="header-img">
    <image mode="aspectFill" src="{{getSaleImg[0].image_url}}"></image>
  </view>
  <view class="content-detail">
    <view class="detail-title">{{getSaleInfo.sale_title}}</view>
    <view class="detail-jg">{{getSaleInfo.sale_price}}</view>
    <view class="detail-xq">{{getSaleInfo.sale_message}}</view>
  </view>
  <view class="content-user">
    <view class="user-name">姓名：{{getSaleInfo.contact_name}}</view>
    <view class="user-name">手机：{{getSaleInfo.contact_tel}}</view>
    <view class="user-name">地址：{{getSaleInfo.province}}{{getSaleInfo.city}}{{getSaleInfo.area_name}}</view>
    <view class="user-name">发布时间：2020-12-12  09：50：32</view>
  </view>
</view>
<view class="footer">
  <view class="footer-left">
    <view wx:if="{{getSaleInfo.is_favor==1}}" class="iconfont icon-taishifuwu-huangxing list-xin" bindtap="qiehuanFn"
      data-index="{{index}}" data-sale_id="{{getSaleInfo.sale_id}}"></view>
    <view class="iconfont icon-shoucang1 list-xin" wx:else bindtap="shoucFn" data-sale_id="{{getSaleInfo.sale_id}}"
      data-index="{{index}}"></view>
    <view>收藏</view>
  </view>
  <view class="footer-right" bindtap="bddhFn">拨打电话</view>
</view>
