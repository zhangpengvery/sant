/* pages/maintain/maintain.wxss */
.header-img{
  width: 94%;
  height: 300rpx;
  margin: 0 3%;
}
.header-img image{
  width: 100%;
  height: 100%;
  border-radius: 20rpx;
}
.title{
  width: 94%;
  margin: 0 3%;
  height: 100rpx;
  display: flex;
  align-items: center;
  line-height: 100rpx;
}
.title .dian{
  width: 10rpx;
  height: 32rpx;
  background: #F9B236;
  border-radius: 54rpx;
  margin-right: 20rpx;
}
.title .title-text{
  color: #333;
  font-size: 30rpx;
}
.content{
  width: 94%;
  margin: 0 3%;
}
.content .con-fater{
  position: relative;
  display: flex;
  align-items: center;
  width: 94%;
  padding: 3% 20rpx;
  height: 210rpx;
  border-radius: 20rpx;
  box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.07);
  margin-bottom: 20rpx;
}
.con-img{
  width: 200rpx;
  margin-right: 20rpx;
  height: 200rpx;
}
.con-img image{
  width: 100%;
  height: 100%;
  border-radius: 20rpx 0 0 20rpx;
}
.con-text .con-title{
  color: #333;
  font-size: 34rpx;
  font-weight: bold;
}
.con-text .con-jg{
  font-size: 34rpx;
  color: #BA1515;
  margin: 20rpx 0;
}
.con-text .con-pj{
  color: #999;
  font-size: 26rpx;
}
.xuanz{
  position: absolute;
  top: 50%;
  right: 20rpx;
  margin-top: -13rpx;
  width: 26rpx;
  height: 26rpx;
  border: 4rpx solid #F9B236;
  border-radius: 50%;
  color: #fff;
  line-height: 26rpx;
  font-size: 26rpx;
  text-align: center;
}
.bgxuanz{
  background: #F9B236;
}
.footer{
  width: 94%;
  margin: 0 3%;
}
.footer-con{
  width: 94%;
  height: 320rpx;
  border-radius: 20rpx;
  padding: 40rpx 3%;
  box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.07);
}
.footer-con input{
  height: 60rpx;
  border: 2rpx solid #bcbcbc;
  margin-bottom: 30rpx;
}
.footer-con view{
  font-size: 28rpx;
  color: #333;
  margin-bottom: 30rpx;
}
.lxdh{
  width: 100%;
  height: 200rpx;
  text-align: center;
  color: #999;
  font-size: 22rpx;
  line-height: 90rpx;
}
.ljzf{
  position: fixed;
  bottom: 40rpx;
  left: 0;
  width: 94%;
  margin: 0 3%;
  height: 94rpx;
  border-radius: 94rpx;
  background: #F9B236;
  color: #fff;
  text-align: center;
  line-height: 94rpx;
  font-size: 32rpx;
  font-weight: bold;
  z-index: 10;
}