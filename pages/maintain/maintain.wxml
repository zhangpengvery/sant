  <view class="con-fater" bindtap="xuanzTopFn">
    <view class="con-img">
      <image src="https://www.jbccs.com/Public/Wap/image/by-sz.png"></image>
    </view>
    <view class="con-text">
      <view class="con-title">上装保养</view>
      <view class="con-jg">￥800</view>
      <view class="con-pj">液压油+齿轮油+液压滤芯</view>
