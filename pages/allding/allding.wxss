/* pages/allding/allding.wxss */
page{
  background: #F9F9F9;
}
.header{
  width: 100%;
  height: 100rpx;
  display: flex;
  justify-content: space-around;
  line-height: 100rpx;
  background: #fff;
}
.nav-box{
  position: relative;
  font-size: 28rpx;
}
.active{
  color: #F9B236;
}
.nav-xian{
  position: absolute;
  bottom: 20rpx;
  left: 50%;
  transform: translate(-50%);
  width: 28rpx;
  height: 4rpx;
}
.bgactive{
  background: #F9B236;
}
.list{
  width: 94%;
  margin: 0 3%;
  overflow: hidden;
}
.user-con{
  position: relative;
  width: 96%;
  height: 180rpx;
  padding: 30rpx 2% 0 2%;
  margin: 20rpx 0 0 0;
  background: #fff;
  border-radius: 20rpx;
  overflow: hidden;
}
.user-con .user{
  position: relative;
  display: flex;
}
.user .user-img{
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
}
.user-img image{
  width: 100%;
  height: 100%;
  border-radius: 50%;
}
.user-xx{
  margin-left: 20rpx;
}
.user-name{
  font-size: 30prx;
  font-weight: bold;
  margin-bottom: 10rpx;
}
.user-pj{
  font-size: 20rpx;
  color: #F9B236;
}
.juli{
  color: #999;
  font-size: 20rpx;
  margin-top: 10rpx;
}
.goging{
  margin-left: 100rpx;
}
.gogingleft{
  width: 330rpx;
}
.gogingleft .icon{
  margin-top: 10rpx;
  font-size: 24rpx;
  color: #ACACAC;
}
.gogingleft .icon text{
  color: #666;
}
.user-pho{
  position: absolute;
  bottom: 30rpx;
  right: 180rpx;
  width: 120rpx;
  height: 50rpx;
  line-height: 50rpx;
  background: #F9B236;
  color: #fff;
  font-size: 20rpx;
  border-radius: 308rpx;
  text-align: center;
  border: 1rpx solid #F9B236;
}
.quxiao{
  position: absolute;
  bottom: 30rpx;
  right: 180rpx;
  width: 120rpx;
  height: 50rpx;
  line-height: 50rpx;
  background: #fff;
  color: #aaaaaa;
  font-size: 20rpx;
  border-radius: 308rpx;
  text-align: center;
  border: 1rpx solid #aaaaaa;
}
.user-dal{
  position: absolute;
  bottom: 30rpx;
  right: 20rpx;
  width: 120rpx;
  height: 50rpx;
  line-height: 50rpx;
  color: #aaa;
  font-size: 20rpx;
  border-radius: 308rpx;
  text-align: center;
  border: 1rpx solid #aaa;
}
.status{
  position: absolute;
  top: -12rpx;
  right: -10rpx;
  width: 100rpx;
  height: 100rpx;
}
.footer{
  position: fixed;
  left: 0;
  width: 94%;
  padding: 0 3%;
  height: 650rpx;
  background: #fff;
  box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.07);
  border-radius: 20rpx 20rpx 0px 0px;
  transition: all ease 0.3s;
  z-index: 20;
}
.header-foot{
  width: 100%;
  height: 100rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.fbpj{
  font-size: 34rpx;
  font-weight: bold;
}
.tjiao{
  font-size: 26rpx;
  color: #F9B236;
}
.assess-star{
  width: 95%;
  height: 50rpx;
  margin-left: 5%;
  display: flex;
  justify-content: end;
  align-items: center;
}
.text-left{
  text-align: justify;
  width: 150rpx;
  text-align-last:justify;
  font-size: 26rpx;
  font-weight: 500;
}
.star-wrap{
  display: flex;
  justify-content: end;
  align-items: center;
  margin: 0 20rpx;
}
.star-item{
  height: 40rpx;
  width: 40rpx;
  margin-right: 10rpx;
}
.star-desc{
  font-size: 30rpx;
  font-weight: 400;
  text-align: center;
  font-size: 26rpx;
}
.content{
  position: relative;
  width: 94%;
  height: 310rpx;
  padding: 20rpx 3%;
  border-radius: 20rpx;
  background: #f9f9f9;
  margin-top: 30rpx;
}
.textnum{
  position: absolute;
  bottom: 20rpx;
  right: 30rpx;
  font-size: 26rpx;
  color: #858585;
}
.textnum text{
  color: #F9B236;
}
.wushujucs{
  padding-top: 300rpx;
  width: 100%;
  text-align: center;
  font-size: 24rpx;
  color: #ababab;
}
.wushu-img{
  width: 44%;
  margin: 0 28%;
  height: 180rpx;
}
.wushu-img image{
  width: 100%;
  height: 100%;
}
.marker{
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.6;
}