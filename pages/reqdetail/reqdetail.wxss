/* pages/reqdetail/reqdetail.wxss */
@import "/assets/fonts/iconfont.wxss";
.content{
  width: 94%;
  margin: 0 3%;
  overflow: hidden;
  border: 1rpx;
}
.content .con-header{
  width: 98%;
  height: 300rpx;
  margin: 20rpx 1%;
  border-radius: 20rpx;
  box-shadow: 0px 0px 4px rgba(0, 0, 0, 0.14);
  overflow: hidden;
}
.con-header .header-title{
  margin: 40rpx 20rpx 20rpx 20rpx;
  position: relative;
  font-size: 34rpx;
  color: #333;
}
.header-title .header-jg{
  position: absolute;
  top: 0;
  right: 0;
  color: #BA1515;
  font-weight: bold;
}
.con-header .header-xq{
  margin: 0 20rpx;
  color: #999;
  font-size: 26rpx;
  height: 70rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.header-xz{
  margin: 40rpx 20rpx 20rpx 20rpx;
  position: relative;
  display: flex;
}
.xz1{
  padding: 6rpx 12rpx;
  border: 2rpx solid #409EFF;
  color: #409EFF;
  background: #ECF5FF;
  font-size: 20rpx;
  border-radius: 6rpx;
  margin-right: 10rpx;
}
.xz2{
  padding: 6rpx 12rpx;
  border: 2rpx solid #E6A23C;
  color: #E6A23C;
  background: #FDF6EC;
  font-size: 20rpx;
  margin-right: 10rpx;
  border-radius: 6rpx;
}
.xz3{
  padding: 6rpx 12rpx;
  border: 2rpx solid #F56C6C;
  background: #FEF0F0;
  color: #F56C6C;
  font-size: 20rpx;
  margin-right: 10rpx;
  border-radius: 6rpx;
}
.header-time{
  position: absolute;
  top: 0;
  right: 0;
  color: #999;
  font-size: 24rpx;
}
.user{
  width: 94%;
  margin: 0 3%;
  border-radius: 20rpx;
  box-shadow: 0px 0px 4px rgba(0, 0, 0, 0.14);
}
.content-user{
  display: flex;
  width: 100%;
  height: 100rpx;
  padding: 40rpx 0;
}
.content-user .user-tx{
  width: 84rpx;
  height: 84rpx;
  margin: 0 20rpx;
  border-radius: 50%;
  border: 2rpx solid #000;
  background: #ccc;
}
.content-user .user-tx image{
  width: 100%;
  height: 100%;
  border-radius: 50%;
}
.user-name{
  color: #333;
  font-size: 26rpx;
  margin-top: 10rpx ;
}
.content-user .user-zl .user-img{
  position: relative;
  width: 80rpx;
  height: 22rpx;
  margin-bottom: 30rpx;
}
.content-user .user-zl .user-img image{
  width: 100%;
  height: 100%;
}
.content-user .user-zl .user-img .vip-text{
  position: absolute;
  top: 12rpx;
  left: 4rpx;
  font-size: 14rpx;
  color: #fff;
}
.users-name{
  width: 94%;
  margin: 0 3%;
  color: #333;
  font-size: 26rpx;
  height: 81rpx;
  line-height: 81rpx;
  width: 100%;
  border-bottom: 2rpx solid #f4f4f4;
}
.tjqg{
  width: 94%;
  margin: 0 3%;
  height: 70rpx;
  line-height: 88rpx;
  color: #333;
  font-weight: bold;
  font-size: 32rpx;
}
.recruit-content{
  width: 94%;
  margin: 0 3%;
  margin-top: 20rpx;
}
.recruit-content .content-box{
  position: relative;
  width: 94%;
  height: 170rpx;
  padding:3%;
  border-radius: 20rpx;
  box-shadow: 0px 0px 4px rgba(0, 0, 0, 0.14);
  margin-bottom: 20rpx;
}
.recruit-content .content-box .content-title{
  font-size: 32rpx;
  font-weight: bold;
  margin: 10rpx 0;
}
.recruit-content .content-box .content-gs{
  height: 32rpx;
  font-size: 24rpx;
  color:#F9B236;
  margin-bottom: 20rpx;
}
.recruit-content .content-box .content-jg{
  position: absolute;
  top: 36rpx;
  right: 20rpx;
  font-size: 34rpx;
  color: #BA1515;
  font-weight: bold;
}
.recruit-content .content-box .content-time{
  position: absolute;
  bottom: 40rpx;
  right: 20rpx;
  font-size: 22rpx;
  color: #C2C2C2;
}
.content-box .content-dz{
  display: flex;
  width: 300rpx;
  height: 50rpx;
}
.content-dz-box{
  padding: 0 10rpx;
  height: 40rpx;
  color: #333;
  background: #f2f2f2;
  border-radius: 6rpx;
  margin-right: 10rpx;
  font-size: 20rpx;
  line-height: 40rpx;
}
.bddh{
  position: fixed;
  bottom: 40rpx;
  left: 0;
  width: 94%;
  margin: 0 3%;
  height: 94rpx;
  border-radius: 94rpx;
  background: #F9B236;
  color: #fff;
  text-align: center;
  line-height: 94rpx;
  font-size: 32rpx;
  font-weight: bold;
  z-index: 10;
}