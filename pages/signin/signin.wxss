/* pages/signin/signin.wxss */
@import "/assets/fonts/iconfont.wxss";
page{
  background: #f4f4f4;
}
.header{
  display: flex;
  justify-content: end;
  width: 90%;
  height: 100rpx;
  padding: 0 5%;
  background: #fff;
  font-size: 24rpx;
  color: #777;
  border-bottom: 1rpx solid #f4f4f4;
  line-height: 100rpx;
  align-items: center;
}
.header-time{
  margin-right: 20rpx;
}
.header-time text{
  color: #aaa;
}
.map-box{
  width: 90%;
  height: 300rpx;
  padding: 0 5%;
  background: #fff;
}
.map-header{
  display: flex;
  height: 100rpx;
  justify-content: space-between;
  line-height: 100rpx;
}
.map-name{
  font-size: 32rpx;
  font-weight: bold;
}
.maprigth{
  font-size: 26rpx;
  color: #F9B236;
}
.clockin{
  width: 280rpx;
  height: 280rpx;
  border-radius: 50%;
  background: linear-gradient(180deg, #FFCD77 0%, #F9B236 100%);
  box-shadow: 0px 6px 6px rgba(249, 178, 54, 0.34);
  margin: 100rpx auto 40rpx auto;
  color: #fff;
  text-align: center;
  overflow: hidden;
}
.clockin2{
  background: linear-gradient(180deg, #B7BFCA 0%, #959CAC 100%);
  box-shadow: 0px 6px 6px rgba(225,228,233, 0.34);
}
.clockin-text{
  font-size: 38rpx;
  font-weight: 500;
  opacity: 0.61;
  margin: 70rpx 0 20rpx 0;
}
.clockin-time{
  font-size: 28rpx;
  font-size: 40rpx;
}
.scope{
  height: 40rpx;
  display: flex;
  justify-content: center;
  font-size: 22rpx;
  align-items: center;
}
.clockin-scope{
  color: #999;
}
.clockin-scope text{
  color: #F9B236;
}
.time-yuan{
  color: #F9B236;
  font-size: 28rpx;
  margin-right: 10rpx;
}
.footer{
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 120rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
  background: #fff;
  font-size: 20rpx;
}
.footer-box{
  display: flex;
  flex-direction: column;
  text-align: center;
  color: #777;
}
.active{
  color: #F9B236;
}
.footer-img{
  width: 52rpx;
  height: 60rpx;
}
.footer-box .active{
  color: #F9B236;
}