/* pages/login/login.wxss */
@import "/assets/fonts/iconfont.wxss";
.header{
  margin-left: 3%;
  color: #333;
  font-size: 36rpx;
  margin-top: 20rpx;
  font-weight: bold;
}
.content{
  width: 94%;
  height: 50rpx;
  margin: 200rpx 3%;
  border-bottom: 2rpx solid #999;
  position: relative;
}
.content .hua{
  position: absolute;
  top: 0;
  left: 20rpx;
  font-size: 38rpx;
  color: #F9B236;
}
.content input{
  font-size: 28rpx;
  margin:0 10%;
}
.content .guan{
  position: absolute;
  top: 0;
  right: 20rpx;
  color: #999;
  z-index: 99;
}
.footer{
  width: 94%;
  margin: 0 3%;
  height: 200rpx;
}
.footer .btn{
  width: 100%;
  height: 86rpx;
  border-radius: 246rpx;
  background: #ccc;
  text-align: center;
  line-height: 86rpx;
}
.footer .btnhuang{
  background: #F9B236;
}
.footer .btn text{
  color: #fff;
}
.tiaoyue{
  height: 100rpx;
  display: flex;
  margin: 0 17%;
}
.tiaoyue .dian{
  width: 22rpx;
  height: 22rpx;
  margin-top: 12rpx;
  margin-right: 10rpx;
  border-radius: 50%;
  border: 1px solid #585858;
}
.tiaoyue .hdian{
  width: 24rpx;
  height: 24rpx;
  border: 0;
  background: #F9B236;
}
.tiaoyue .zhiti text{
  font-size: 20rpx;
}
.tiaoyue .zhiti .huang{
  color:#F9B236;
}
.tiaoyue .zhiti .hui{
  color: #999;
}