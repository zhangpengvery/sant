/* pages/details/details.wxss */
.header{
  width: 94%;
  margin: 0 3%;
  padding: 1rpx;
}
.content{
  width: 94%;
  padding: 0 3%;  
  margin-top: 20rpx;
  box-shadow: 0px 0px 4px rgba(0, 0, 0, 0.14);
  border-radius: 20rpx;
}
.content .content-box{
  position: relative;
  width: 94%;
  height: 206rpx;
  padding:3%;
}
.content .content-box .content-title{
  margin: 10rpx 0;
  font-size: 32rpx;
}
.content .content-box .content-gs{
  font-size: 24rpx;
  color:#F9B236;
}
.content .content-box .content-jg{
  position: absolute;
  top: 30rpx;
  right: 0;
  font-size: 26rpx;
  color: #F9B236;
  font-weight: bold;
}
.content .content-box .content-time{
  position: absolute;
  bottom: 30rpx;
  right: 0;
  font-size: 22rpx;
  color: #C2C2C2;
}
.content-box .content-dizhi{
  margin: 5rpx 0 20rpx 0;
  font-size: 24rpx;
  color: #999;
}
.content-box .content-dz{
  display: flex;
  width: 300rpx;
  height: 50rpx;
}
.content-dz-box{
  padding: 0 10rpx;
  height: 40rpx;
  color: #333;
  background: #f2f2f2;
  border-radius: 6rpx;
  margin-right: 10rpx;
  font-size: 20rpx;
  line-height: 40rpx;
}
.content-user{
  display: flex;
  width: 100%;
  height: 130rpx;
  padding: 40rpx 0;
  border-top:  2rpx solid #f4f4f4;
  border-bottom:  2rpx solid #f4f4f4;
}
.content-user .user-tx{
  width: 84rpx;
  height: 84rpx;
  margin: 0 20rpx;
  border-radius: 50%;
  border: 2rpx solid #000;
  background: #ccc;
}
.content-user .user-tx image{
  width: 100%;
  height: 100%;
  border-radius: 50%;
}
.user-name{
  color: #333;
  font-size: 26rpx;
  margin-top: 10rpx ;
}
.content-user .user-zl .user-img{
  width: 100rpx;
  height: 46rpx;
  margin-bottom: 30rpx;
}
.content-user .user-zl .user-img image{
  width: 100%;
  height: 100%;
}
.content-user .user-zl .user-pho{
  font-size: 20rpx;
  color: #333;
}
.content-user .user-zl .user-pho text{
  color: #F9B236;
}
.content-zhiwei{
