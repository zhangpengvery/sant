<!--pages/position/position.wxml-->
<view  class="mapbox" hover-class="none" style="width: 100%; height: 100%;">
  <map class="map" latitude="{{latitude}}" longitude="{{longitude}}" scale="14" show-location="true"
    style="width: 100%; height: 100%;" markers="{{markers}}"></map>
</view>
<view class="footer">
  <view class="vin">
    <view class="vin-text">{{txjLocation.vinCode}}</view>
    <view class="lucheng">行驶路程：<text class="lucnum">{{txjLocation.totalMileage}}km</text></view>
  </view>
  <view class="address">
    <view class="address-text">地址：</view>
    <view class="addressright">{{txjLocation.address}}</view>
  </view>
  <view class="goaddress" bindtap="bindgo" data-lat="{{latitude}}" data-lng="{{longitude}}" data-address="{{txjLocation.address}}">导航过去</view>
</view>