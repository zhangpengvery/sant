/* pages/repcard/repcard.wxss */
page {
  background: #f6f6f6;
}
.header {
  width: 94%;
  margin: 20rpx 3%;
  height: 166rpx;
  background: #FFFFFF;
  border-radius: 20rpx;
  overflow: hidden;
}
.time{
  margin: 25rpx 10rpx;
}
.red{
  color: #BA1515;
}
.time-box{
  font-size: 32rpx;
  font-weight: bold;
  margin-left: 30rpx;
}
.content{
  width: 94%;
  margin: 0 3%;
  height: 300rpx;
  background: #FFFFFF;
  border-radius: 20rpx;
  overflow: hidden;
}
.textfw{
  font-weight: bold;
}
.text-ly{
  height: 180rpx;
  font-size: 32rpx;
  margin-left: 30rpx;
}
.ljfb{
  position: fixed;
  bottom: 40rpx;
  left: 0;
  width: 94%;
  margin: 0 3%;
  height: 94rpx;
  border-radius: 94rpx;
  background: #F9B236;
  color: #fff;
  text-align: center;
  line-height: 94rpx;
  font-size: 32rpx;
  font-weight: bold;
  z-index: 10;
}