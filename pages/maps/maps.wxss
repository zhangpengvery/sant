/* pages/maps/maps.wxss */
@import "/assets/fonts/iconfont.wxss";
page{
  height: 100%;
}
.mapbox{
  position: fixed;
  left: 0;
  top: 0;
  overflow: hidden;
}
.footer{
  width: 100%;
  position: fixed;
  bottom: 0;
  left: 0;
  background: #fff;
  transition:all linear .3s;
  border-radius: 20rpx 20rpx 0 0;
  z-index: 8;
}
.footer .jiant{
  font-size: 28rpx;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  color: #c7c7c7;
  opacity: 0.54;
}
.gclc-icon{
  display: flex;
  justify-content: space-between;
  width: 100%;
  height: 150rpx;
}
.icon-left{
  width: 20%;
  text-align: center;
  align-items: center;
}
.icon-left .yuan{
  font-size: 80rpx;
  -webkit-background-clip:text;
  color: transparent;
}
.icon-left .yuan1{
  background-image: linear-gradient(-45deg,#4fbec7,#87CED6);
}
.icon-left .yuan2{
  background-image: linear-gradient(-45deg,#706fa9,#8694c9);
}
.icon-left .yuan3{
  background-image: linear-gradient(-45deg,#5282c3,#5fa3d9);
}
.icon-left .yuan4{
  background-image: linear-gradient(-45deg,#f18b42,#f5ae7f);
}
.icon-left .yuan5{
  background-image: linear-gradient(-45deg,#ec6957,#f1958b);
}
.icon-left .xiandan{
  color: #333;
  font-size: 24rpx;
  margin: 10rpx 0;
}
.text{
  width: 92%;
  height: 40rpx;
  line-height: 40rpx;
  margin: 0 3% 20rpx 3%;
  padding-left: 2%;
  background: rgb(254,244,226);
  border-radius: 198rpx;
  font-size: 20rpx;
}
.scrbox{
  width: 94%;
  margin: 0 3%;
  transition:all linear .3s;
}
.scrbox .box-con{
  position: relative;
  width: 94%;
  height: 180rpx;
  padding: 0 3%;
  background: #f9f9f9;
  border-radius: 20rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
}
.box-con .user{
  display: flex;
  width: 80%;
  margin-top: 20rpx;
}
.user .user-img{
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
}
.user-img image{
  width: 100%;
  height: 100%;
  border-radius: 50%;
}
.user-xx{
  margin-left: 20rpx;
}
.user-name{
  font-size: 30prx;
  font-weight: bold;
  margin-bottom: 10rpx;
}
.user-pj{
  font-size: 20rpx;
  color: #F9B236;
}
.juli{
  position: absolute;
  color: #999;
  font-size: 20rpx;
  right: 20rpx;
  top: 30rpx;
}
.goging{
  margin-left: 100rpx;
  display: flex;
}
.gogingleft{
  width: 330rpx;
}
.gogingleft .icon{
  margin-top: 10rpx;
  font-size: 24rpx;
  color: #ACACAC;
}
.gogingleft .icon text{
  color: #666;
}
.user-pho{
  position: absolute;
  bottom: 30rpx;
  right: 20rpx;
  width: 120rpx;
  height: 50rpx;
  line-height: 50rpx;
  background: #F9B236;
  color: #fff;
  font-size: 20rpx;
  border-radius: 308rpx;
  text-align: center;
}
.scrfooter{
  position: fixed;
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  display: flex;
  bottom: 0;
  left: 0;
  border-top: 1rpx solid #f4f4f4;
  font-size: 30rpx;
  z-index: 10;
  background: #fff;
}
.cygn{
  width: 50%;
  text-align: center;
  border-right: 1rpx solid #f4f4f4;
}
.yjbx{
  width: 50%;
  text-align: center;
}
.huang{
  color: #F9B236;
}
.gofwz{
  width: 70%;
  margin-left: 20rpx;
}
.gofwz .icon{
  font-size: 24rpx;
  color: #ACACAC;
}
.gofwz .icon text{
  color: #666;
}