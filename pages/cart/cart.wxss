/* pages/cart/cart.wxss */
page{
  background-color: #f4f4f4;
}
.cart-content .nogoods{
  width: 100%;
  height: 100%;
  position: relative;
}
.cart-content .nogoods image{
  width: 320rpx;
  height: 426rpx;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-160rpx,-213rpx);
}
.cart-content .nogoods .nogoods-info{
  width: 80%;
  padding: 50rpx;
  border-radius: 30rpx;
  border: 10rpx solid #AEB1DA;
  box-sizing: border-box;
  position: absolute;
  top: 50rpx;
  left: 20rpx;
}
.cart-content .nogoods .nogoods-info::after{
  content: "";
  display: block;
  border-right: 50rpx solid transparent;
  border-bottom: 0;
  border-top: 50rpx solid #AEB1DA;
  border-left: 50rpx solid transparent;
  position: absolute;
  bottom: -60rpx;
  right: 50rpx;
}
.cart-content .havegoods{
  width: 100%;
  height: 100%;
}
.total{
  width: 100%;
  text-align: center;
  background: #fff;
  color: #8a8a8a;
  font-size: 20rpx;
}
.cart-content .havegoods .sendcity{
  display: flex;
  justify-content: flex-end;
  width: 93%;
  height: 50rpx;
  line-height: 50rpx;
  padding: 0 3%;
  background: #fff;
}
.cart-goods{
  width: 94%;
  margin: 20rpx 3% 0;
  background: #fff;
  border-radius: 20rpx;
  overflow: hidden;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.cart-goods .cart-icon{
  width: 5%;
  text-align: center;
}
.cart-goods .cart-icon icon{
  font-size: 26rpx;
}
.cart-goods .cart-img{
  width: 188rpx;
  height: 188rpx;
  margin: 20rpx 0;
}
.cart-goods .cart-img image{
  width: 100%;
  height: 100%;
  border-radius: 16rpx;
}
.cart-goods .goods-info{
  width: 60%;
  padding: 10rpx;
  box-sizing: border-box;
}
.cart-goods .goods-info .goods-title{
  width: 100%;
  color: #333;
  font-size: 30rpx;
  font-weight: bold;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.cart-goods .goods-info .goods-other{
  width: 100%;
  display: flex;
  justify-content: space-between;
  text-align: center;
  padding: 20rpx 20rpx 20rpx 0;
  box-sizing: border-box;
}
.cart-goods .goods-info .goods-other .goods-price{
  font-size: 30rpx;
  color: #BA1515;
  font-weight: 600;
  line-height: 50rpx;
}
.cart-goods .goods-info .goods-other .goods-price::before{
  content: "￥";
  font-size: 24rpx;
}
.cart-goods .goods-info .goods-other .goods-num{
  display: flex;
  justify-content: start;
  text-align: center;
}
.cart-goods .goods-info .goods-other .goods-num button{
  width: 50rpx;
  height: 50rpx;
  padding: 0;
  text-align: center;
  line-height: 50rpx;
}
.cart-goods .goods-info .goods-other .goods-num input{
  width: 100rpx;
  height: 50rpx;
  border: 2rpx solid #f4f4f4;
  font-size: 26rpx;
  text-align: center;
  line-height: 50rpx;
  box-sizing: border-box;
}
.cart-goods .goods-info .goods-other .shoucang{
  font-size: 26rpx;
  line-height: 50rpx;
}
.cart-goods .goods-info .goods-other .delate{
  font-size: 30rpx;
  line-height: 50rpx;
}
/* 底部导航 */
.cart-footer{
  width: 100%;
  position: fixed;
  bottom: 0rpx;
  background: #fff;
  border-top: 1px solid #efefef;
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 88rpx;
  line-height: 88rpx;
}
.cart-footer .cart-icon{
  display: flex;
  justify-content: center;
  align-items: center;
  height: 88rpx;
}
.cart-footer .cart-icon icon{
  margin: 45rpx 20rpx 0;
}
.cart-footer .cart-icon text{
  font-size: 28rpx;
}
.cart-footer .allprice{
  font-size: 28rpx;
}
.cart-footer .allprice text{
  color: #f00;
  font-weight: 600;
}
.cart-footer .allprice text::before{
  content: "￥";
  font-size: 24rpx;
}
.cart-footer .gobuy{
  width: 30%;
  background: #f44;
  color: #fff;
  line-height: 88rpx;
  text-align: center;
}
.cart-footer .delete{
  width: 30%;
  background: #c4c4c4;
  color: #f44;
  line-height: 88rpx;
  text-align: center;
}