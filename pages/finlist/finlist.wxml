<view class="header">
  <view class="nav-box {{currentIndex==0?'active':''}}" data-current="0" bindtap="changeSwiper">
    处理中<view class="nav-xian {{currentIndex==0?'bgactive':''}}"></view>
  </view>
  <view class="nav-box {{currentIndex==1?'active':''}}" data-current="1" bindtap="changeSwiper">
    历史订单<view class="nav-xian {{currentIndex==1?'bgactive':''}}"></view>
  </view>
</view>
<swiper class="swiper-order" bindchange="changeTab" current="{{currentIndex}}" style="height:{{scrollH}}rpx">
  <!-- 处理中 -->
  <swiper-item>
    <scroll-view scroll-y="true" style="height:{{scrollH}}rpx" wx:if="{{markers.length>0}}"
      bindscrolltolower="loadMore">
      <view class="box">
        <block wx:for="{{markers}}" wx:key="index">
          <view class="content">
            <view class="user-name">{{item.user_name}}</view>
            <view class="db-time">订单编号：{{item.order_id}}</view>
            <view class="db-address">{{item.time}}</view>
            <view class="delete" wx:if="{{item.status==0}}" data-index="{{index}}" data-id="{{item.id}}"
              bindtap="deleteFn">转办订单</view>
            <navigator url="/pages/findetail/findetail?order_id={{item.order_id}}&id={{item.id}}">
              <view class="editor" data-order_id="{{item.order_id}}">订单详情</view>
            </navigator>
            <view class="zhuangt" wx:if="{{item.status==0}}">已接单</view>
            <view class="zhuangt" wx:if="{{item.status==1}}">已预约</view>
            <view class="zhuangt" wx:if="{{item.status==2}}">部分完成</view>
            <view class="left-img" wx:if="{{item.sorts==1}}">
              <image src="/assets/images/20210326122033.png"></image>
            </view>
          </view>
        </block>
      </view>
    </scroll-view>
    <view wx:else class="wushujucs">
      <view class="wushu-img">
        <image src="/assets/images/kong.png"></image>
      </view>
      <view>暂无数据</view>
    </view>
  </swiper-item>
  <!-- 历史订单 -->
  <swiper-item>
    <scroll-view scroll-y="true" style="height:{{scrollH}}rpx" wx:if="{{markers2.length>0}}"
      bindscrolltolower="loadMore2">
      <view class="box">
        <block wx:for="{{markers2}}" wx:key="index">
          <view class="content">
            <view class="user-name">{{item.user_name}}</view>
            <view class="db-time">订单编号：{{item.order_id}}</view>
            <view class="db-address">创建日期：{{item.time}}</view>
            <view class="db-address" wx:if="{{item.complete_time!=null}}">完成日期：{{item.time2}}</view>
            <view class="delete" data-index="{{index}}" data-id="{{item.id}}" bindtap="deleteFn">删除订单</view>
            <navigator url="/pages/findetail/findetail?order_id={{item.order_id}}">
              <view class="editor">订单详情</view>
            </navigator>
            <view class="zhuangt zhuangt2" wx:if="{{item.status==-1}}">已取消</view>
            <view class="zhuangt zhuangt2" wx:if="{{item.status==4}}">已转办</view>
            <view class="zhuangt zhuangt2" wx:if="{{item.status==3}}">已完成</view>
          </view>
        </block>
      </view>
    </scroll-view>
    <view wx:else class="wushujucs">
      <view class="wushu-img">
        <image src="/assets/images/kong.png"></image>
      </view>
      <view>暂无数据</view>
    </view>
  </swiper-item>
</swiper>