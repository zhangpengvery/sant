/* pages/ganhuo/ganhuo.wxss */
page{
  background: #F9F9F9;
}
.order-content{
  width: 100%;
  height: 530rpx;
  background: #f9f9f9;
  overflow: hidden;
}
.con-top{
  width: 100%;
  text-align: center;
  margin:30rpx 0;
  font-size: 32rpx;
}
.time-w{
  width: 100%;
  display: flex;
  line-height: 60rpx;
  justify-content: center;
  text-align: center;
}
.time-w .time{
  width: 70rpx;
  height: 70rpx;
  background: #F0483C;
  opacity: 1;
  border-radius: 8rpx;
  line-height: 70rpx;
  color: #fff;
  font-size: 44rpx;
}
.time-w .time1{
  color: #333;
  font-size: 44rpx;
  margin: 0 10rpx;
}
.order-footer{
  display: flex;
  justify-content: space-between;
  width: 80%;
  margin: 40rpx 10% 20rpx 10%;
}
.footer-box{
  width: 100rpx;
  text-align: center;
  font-size: 20rpx;
  color: #B3B3B3;
}
.footer-box .iconfont{
  font-size: 44rpx;
  margin-bottom: 10rpx;
}
.order-footer .jiant2{
  color: #E3E2E2;
}
.order-footer .okactive{
  color: #F9B236;
}
.user-con{
  position: relative;
  width: 90%;
  height: 180rpx;
  padding: 20rpx 2% 0 2%;
  margin: 0 3%;
  background: #fff;
  border-radius: 20rpx;
  box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.07);
}
.user-con .user{
  position: relative;
  display: flex;
}
.user .user-img{
  position: relative;
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
}
.user-img image{
  width: 100%;
  height: 100%;
  border-radius: 50%;
}
.serv-order{
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 700rpx;
  background: #fff;
  box-shadow: 0px 0px 20rpx rgba(0, 0, 0, 0.07);
  border-radius: 20rpx 20rpx 0px 0px;
}
.serv-top{
  display: flex;
  justify-content: space-between;
  width: 60%;
  height: 80rpx;
  line-height: 80rpx;
  margin: 0 20%;
  color: #9A9A9A;
  font-size: 28rpx;
}
.serv-text{
  border-bottom: 4rpx solid #F9B236;
  color: #333;
}
.user-xx{
  width: 100%;
  margin-left: 20rpx;
}
.user-name{
  width: 100%;
  font-size: 30prx;
  font-weight: bold;
  margin-bottom: 10rpx;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}
.user-pj{
  font-size: 20rpx;
  color: #F9B236;
}
.juli{
  color: #999;
  font-size: 20rpx;
  margin-top: 10rpx;
}
.goging{
  margin-left: 100rpx;
}
.gogingleft{
  width: 330rpx;
}
.gogingleft .icon{
  margin-top: 10rpx;
  font-size: 24rpx;
  color: #ACACAC;
}
.gogingleft .icon text{
  color: #666;
}
.user-pho{
  position: absolute;
  bottom: 30rpx;
  right: 20rpx;
  width: 120rpx;
  height: 50rpx;
  line-height: 50rpx;
  background: #F9B236;
  color: #fff;
  font-size: 20rpx;
  border-radius: 308rpx;
  text-align: center;
}
.qrwc{
  width: 94%;
  margin: 0 3%;
  background: #F9B236;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  color: #fff;
  font-size: 32rpx;
  border-radius: 94rpx;
  margin-top: 60rpx;
}
.footer{
  width: 88%;
  padding: 0 3%;
  margin: 0 3%;
  height: 650rpx;
  background: #fff;
  box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.07);
  border-radius: 20rpx;
  transition: all ease 0.3s;
  z-index: 20;
}
.header-foot{
  width: 100%;
  height: 100rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.fbpj{
  font-size: 34rpx;
  font-weight: bold;
}
.tjiao{
  font-size: 26rpx;
  color: #F9B236;
}
.assess-star{
  width: 95%;
  height: 50rpx;
  margin-left: 5%;
  display: flex;
  justify-content: end;
  align-items: center;
}
.text-left{
  text-align: justify;
  width: 150rpx;
  text-align-last:justify;
  font-size: 26rpx;
  font-weight: 500;
}
.star-wrap{
  display: flex;
  justify-content: end;
  align-items: center;
  margin: 0 20rpx;
}
.star-item{
  height: 40rpx;
  width: 40rpx;
  margin-right: 10rpx;
}
.star-desc{
  font-size: 30rpx;
  font-weight: 400;
  text-align: center;
  font-size: 26rpx;
}
.content{
  position: relative;
  width: 94%;
  height: 310rpx;
  padding: 20rpx 3%;
  border-radius: 20rpx;
  background: #f9f9f9;
  margin-top: 30rpx;
}