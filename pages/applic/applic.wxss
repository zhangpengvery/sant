/* pages/applic/applic.wxss */
page{
  background: #f6f6f6;
}
.box{
  width: 88%;
  padding: 0 3%;
  margin: 20rpx 3% 0 3%;
  background: #fff;
  border-radius: 20rpx;
  overflow: hidden;
}
scroll-view ::-webkit-scrollbar{
  width: 0;
  height: 0;
  color: transparent;
  display: none;
}
.header{
  display: flex;
  height: 50rpx;
  line-height: 50rpx;
  justify-content: space-between;
  margin: 20rpx 0;
}
.header-left{
  font-size: 32rpx;
  font-weight: bold;
}
.header-right{
  font-size: 28rpx;
}
.con-text{
  width: 94%;
  height: 100rpx;
  padding: 0 3%;
  display: flex;
  justify-content: space-between;
  background: rgba(75, 149, 247, 0.07);
  border-radius: 20rpx;
  align-items: center;
  margin-bottom: 20rpx;
}
.text-box{
  display: flex;
  font-size: 28rpx;
}
.text-qk{
  font-weight: bold;
  color: #333;
}
.text-time{
  color: #666;
}
.chuli{
  width: 100rpx;
  height: 50rpx;
  border-radius: 42rpx;
  background: #F9B236;
  color: #fff;
  text-align: center;
  line-height: 50rpx;
  font-size: 24rpx;
}
.dixian{
  width: 100%;
  height: 50rpx;
  text-align: center;
  font-size: 24rpx;
  color: #ababab;
}