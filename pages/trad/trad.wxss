/* pages/trad/trad.wxss */
@import "/assets/fonts/iconfont.wxss";
.header{
  position: relative;
  width: 40%;
  height: 50rpx;
  margin: 0 30%;
  display: flex;
  justify-content: center;
  border: 2rpx solid #F9B236;
  border-radius: 52rpx;
  line-height: 50rpx;
  color: #F9B236;
  font-size: 26rpx;
  z-index: 2;
}
.box{
  width: 50%;
  text-align: center;
}
.box-left{
  color: #fff;
  background: #F9B236;
  border-radius: 52rpx 0 0 52rpx;
}
.box-right{
  color: #fff;
  background: #F9B236;
  border-radius: 0 52rpx 52rpx 0 ;
}
.aui-content{
  display: flex;
  width: 100%;
  height: 74rpx;
  box-shadow: 0 4rpx 4px  rgba(0, 0, 0, 0.14);
  background: #fff;
}
.aui-content .juli-left{
  display: flex;
  height: 60rpx;
  width: 50%;
  line-height: 70rpx;
  justify-content: center;
  font-size: 26rpx;
  color: #333;
}
.aui-content .active {
  color: #F9B236;
}
.aui-content .juli-right{
  display: flex;
  height: 60rpx;
  width: 50%;
  line-height: 70rpx;
  justify-content: center;
  font-size: 26rpx;
  color: #333;
}
.aui-content .cityactive{
  color: #F9B236;
}
.xiabiao{
  margin-left: 6rpx;
  font-size: 12rpx;
}
.mask {
  width: 100%;
  height: 70%;
  position: fixed;
  bottom: 0;
  left: 0;
  background: #000;
  z-index: 50;
  opacity: 0.7;
 }
.max-mask{
  width: 100%;
  height: 100%;
  position: fixed;
  bottom: 0;
  left: 0;
  background: #000;
  z-index: 3;
  opacity: 0.7;
 }
 /* 加号 */
 .jiahao{
   position: fixed;
   bottom: 40rpx;
   left: 50%;
   margin-left: -46rpx;
   width: 92rpx;
   height: 92rpx;
   border-radius: 50%;
   background: #F9B236;
   color: #fff;
   text-align: center;
   line-height: 82rpx;
   font-size: 60rpx;
   z-index: 10;
 }
 .mask-jiahao{
   position: fixed;
   bottom: 0;
   left: 0;
   width: 100%;
   height: 450rpx;
   background: #fff;
   z-index: 20;
   border-radius: 60rpx 60rpx 0px 0px;
 }
 .chahao{
  position: fixed;
  bottom: 40rpx;
  left: 50%;
  transform: translate(-50%);
  color: #F9B236;
  font-size: 90rpx;
  z-index: 30;
 }
 .mask-title{
   text-align: center;
   font-size: 36rpx;
   color: #333;
   margin: 20rpx 0;
 }
 .mask-icon{
   width: 100%;
   height: 200rpx;
   display: flex;
   justify-content: space-around;
   text-align: center;
 }
 .mask-icon .iconfont{
   width: 120rpx;
   height: 120rpx;
   border-radius: 50%;
   background: #F9B236;
   color: #fff;
   line-height: 120rpx;
   font-size: 50rpx;
   margin-bottom: 20rpx;
 }
 .mask-icon text{
   font-size: 28rpx;
 }
 .showjuli{
  position: fixed;
  top: 260rpx;
  left: 0;
  width: 92%;
  height: 260rpx;
  padding: 50rpx 4%;
  background: #fff;
  z-index: 100;
}
.showchengs{
  position: fixed;
  top: 260rpx;
  left: 0;
  width: 92%;
  height: 260rpx;
  padding: 50rpx 4%;
  background: #fff;
  z-index: 100;
  text-align: center;
}
 .list{
  width: 94%;
  height: auto;
  margin: 0 3%;
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
  text-align: center;
}
.list .list-content{
  position: relative;
  width: 44%;
  height: 340rpx;
  padding: 2%;
  border-radius: 20rpx;
  box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.07);
  margin-top: 20rpx;
}
.list .list-content image{
  width: 284rpx;
  height: 175rpx;
  border-radius: 10rpx 10rpx 0 0;
  margin-top: 10rpx;
}
.list .list-content .list-name{
  text-align: left;
  padding-left: 3%;
  width: 93%;
  font-size: 28rpx;
  color: #343232;
  height: 40rpx;
  display: block;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin: 10rpx 0 5rpx 0;
}
.list .list-content .list-city{
  font-size: 24rpx;
  color: #999;
  width: 93%;
  padding-left: 3%;
  text-align: left;
  margin-bottom: 20rpx;
}
.list .list-content .list-price{
  display: block;
  padding-left: 3%;
  width: 93%;
  text-align: left;
  font-size: 28rpx;
  color: #D90F0F;
}
.list .list-content .list-price ::before{
  content: "￥";
}
.list-right{
  width: 94%;
  height: auto;
  margin: 0 3%;
}
.list-right .right-content{
  width: 94%;
  padding: 0 3%;
  height: 200rpx;
  border-left: 10rpx solid #F9B236;
  border-radius: 20rpx;
  box-shadow: 0px 0px 4px rgba(0, 0, 0, 0.14);
  margin-top: 20rpx;
}
.right-content .right-title{
  position: relative;
  line-height: 80rpx;
  height: 80rpx;
  color: #333;
  font-size: 32rpx;
  font-weight: bold;
}
.right-content .right-name{
  color: #999;
  font-size: 24rpx;
  margin-bottom: 10rpx;
}
.right-content .right-title .right-jg{
  position: absolute;
  top: 0;
  right: 0;
  color: #BA1515;
}
.right-content .right-title .right-jg::before{
  content: "￥";
}