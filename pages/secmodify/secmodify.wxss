/* pages/secmodify/secmodify.wxss */
@import "/assets/fonts/iconfont.wxss";
.weui-cell{
  width: 90%;
  margin: 0 5%;
  display: flex;
  justify-content: end;
  align-items: center;
  flex-wrap: wrap;
}
.weui-box{
  position: relative;
  width: 140rpx;
  height: 140rpx;
  margin: 20rpx 10rpx 0;
  border: 1rpx solid #fff;
}
.weui-box .chahao{
  width: 32rpx;
  height: 32rpx;
  position: absolute;
  right: -16rpx;
  bottom: -16rpx;
}
.weui-box .chahao image{
  width: 100%;
  height: 100%;
}
.weui-box image{
  width: 100%;
  height: 100%;
}
.tianjia{
  margin: 20rpx 10rpx 0;
  width: 140rpx;
  height: 140rpx;
  border: 1rpx solid #d9d9d9;
  text-align: center;
  line-height: 140rpx;
  color: #d9d9d9;
  font-size: 60rpx;
}
.content{
  width: 90%;
  margin: 0 5%;
  overflow: hidden;
}
.box{
  display: flex;
  height: 60rpx;
  margin-top: 30rpx;
}
.box2{
  height: 270rpx;
}
.box .box-inp{
  border-bottom: 2rpx solid #DCDCDC;
}
.box-title{
  width: 22%;
  color: #333;
  font-size: 30rpx;
}
.box-inp{
  width: 78%;
  position: relative;
}
.box-da{
  height: 260rpx;
}
.box-inp input{
  font-size: 26rpx;
}
.da-inp{
  font-size: 26rpx;
  width: 520rpx;
  height: 260rpx;
}
.box-inp .iconfont{
  position: absolute;
  top: 0;
  right: 0;
  font-size: 26rpx;
  color: #F9B236;
}
.picker{
  color: #F9B236;
  font-size: 26rpx;
}
.ljfb{
  position: fixed;
  bottom: 40rpx;
  left: 0;
  width: 94%;
  margin: 0 3%;
  height: 94rpx;
  border-radius: 94rpx;
  background: #F9B236;
  color: #fff;
  text-align: center;
  line-height: 94rpx;
  font-size: 32rpx;
  font-weight: bold;
  z-index: 10;
}