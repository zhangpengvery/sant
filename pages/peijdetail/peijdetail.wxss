/* pages/accedetail/accedetail.wxss */
@import "/assets/fonts/iconfont.wxss";
page{
  background: #f6f6f6;
}
.detail-swp{
  width: 100%;
  height: 480rpx;
}
.detail-swp image{
  width: 100%;
  height: 100%;
  background: #f6f6f6;
}
.details{
  width: 90%;
  height: 160rpx;
  padding: 30rpx 5%;
  border-radius: 20rpx 20rpx 0 0;
  background: #fff;
}
.details .details-text{
  position: relative;
  font-size: 34rpx;
  font-weight: bold;
  color: #333333;
}
.details-text .iconfont{
  position: absolute;
  right: 0;
  top: 0;
  color: #F9B236;
}
.details-jg{
  font-size: 34rpx;
  font-weight: bold;
  color: #BA1515;
  margin-top: 10rpx;
}
.details-bzd{
  display: flex;
  justify-content: space-between;
  color: #999;
  font-size: 24rpx;
  margin-top: 30rpx;
}
.details-fw{
  display: flex;
  justify-content: space-between;
  width: 90%;
  padding: 0 5%;
  height: 66rpx;
  background: #fcfcfc;
  border-radius: 0px 0px 20rpx 20rpx;
  font-size: 22rpx;
  color: #333;
  line-height: 66rpx;
  margin-bottom: 20rpx;
}
.fw-flex{
  display: flex;
}
.fw-flex .iconfont{
  color: #f00;
  margin-right: 5rpx;
}
.reviews{
  width: 90%;
  padding: 30rpx 5%;
  background: #fff;
  height: 740rpx;
  border-radius: 20rpx;
  margin-bottom: 20rpx;
}
.reviews-title{
  display: flex;
  justify-content: space-between;
}
.title-left{
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
}
.title-right{
  font-size: 24rpx;
  color: #F9B236;
}
.pinglun{
  height: 220rpx;
  position: relative;
}
.user{
  display: flex;
  height: 60rpx;
  line-height: 60rpx;
  margin: 30rpx 0;
}
.user .user-tx{
  width:60rpx;
  height: 60rpx;
  border-radius: 50%;
  background: #000;
  margin-right: 20rpx;
}
.user .user-name{
  color: #333;
  font-size: 26rpx;
}
.user-text{
  color: #333;
  font-size: 24rpx;
  margin-left: 85rpx;
}
.time{
  position: absolute;
  bottom: 0;
  right: 0;
  color: #333;
  font-size: 24rpx;
}
.xian{
  width: 86%;
  margin: 42rpx 7% 30rpx 7%;
  border-bottom: 1rpx solid #d8d8d8;
}
.allreviews{
  margin-top: 50rpx;
  width: 30%;
  padding: 0 35%;
}
.allreviews-box{
  width: 100%;
  height: 50rpx;
  border-radius: 160rpx;
  border: 2rpx solid #F9B236;
  color: #F9B236;
  font-size: 24rpx;
  text-align: center;
  line-height: 50rpx;
}
.cpxq-text{
  color: #989898;
  font-size: 24rpx;
  height: 40rpx;
  text-align: center;
}
.footer{
  margin-bottom: 110rpx;
}
.footer-dw{
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 120rpx;
  display: flex;
  justify-content: space-around;
  background: #fff;
  align-items: center;
}
.footer-left{
  flex: 1;
  text-align: center;
  color: #333;
  font-size: 22rpx;
}
.footer-dw .footer-left .iconfont{
  font-size: 40rpx;
}
.footer-dw .footer-right{
  display: flex;
  height: 80rpx;
  flex: 3;
  text-align: center;
  line-height: 80rpx;
  color: #fff;
  font-size: 28rpx;
  margin: 0 20rpx;
}
.left-car{
  width: 50%;
  background: #F9B236;
  border-radius: 94rpx 0px 0px 94rpx;
}
.ljgm{
  width: 50%;
  background: #F97936;
  border-radius: 0px 94rpx 94rpx 0px;
}
.list-xin{
  color: #F9B236;
}
.share{
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 300rpx;
  background: #f4f4f4;
  z-index: 300;
}
.share-box{
  display: flex;
  justify-content: space-around;
  height: 180rpx;
  background: #fff;
}
.share-left{
  display: flex;
  flex-direction: column;
  text-align: center;
  justify-content: center;
}
.buntt-css{
  height: 40rpx;
  background: #fff;
  padding: 0;
  font-weight: 500;
}
.share-footer{
  margin-top: 20rpx;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  background: #fff;
}
.share-modal-bg{
  width: 572rpx;
  height: 960rpx;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 1000;
}
.share-modal-bg image{
  width: 100%;
  height: 100%;
}