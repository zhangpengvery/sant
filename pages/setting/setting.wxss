/* pages/setting/setting.wxss */
page{
  background: #f6f6f6;
}
.body{
  width: 94%;
  margin: 0 3%;
}
.body-header{
  margin-top: 20rpx;
  height: 250rpx;
  width: 100%;
  padding: 10rpx 0;
  border-radius: 20rpx;
}
.box1{
  font-size: 30rpx;
  display: flex;
  justify-content: space-between;
  width: 94%;
  padding:  0 3%;
  height: 100rpx;
  line-height: 100rpx;
  align-items: center;
  border-bottom: 1rpx solid #f4f4f4;
  background: #fff;
}
.toxiang{
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  margin-right: 20rpx;
  margin-top: 15rpx;
}
.toxiang image{
  width: 100%;
  height: 100%;
  border-radius: 50%;
}
.box1-left{
  display: flex;
}
.box{
  font-size: 30rpx;
  display: flex;
  justify-content: space-between;
  width: 94%;
  padding:  0 3%;
  height: 80rpx;
  line-height: 80rpx;
  background: #fff;
}
.gobuy{
  font-size: 30rpx;
  color: #ababab;
}
.ljzf{
  position: fixed;
  bottom: 40rpx;
  left: 0;
  width: 94%;
  margin: 0 3%;
  height: 94rpx;
  border-radius: 94rpx;
  color: #F9B236;
  text-align: center;
  line-height: 94rpx;
  font-size: 32rpx;
  font-weight: bold;
  z-index: 10;
  border: 1rpx solid #F9B236;
}
.feedback {
  margin: 0;
  padding: 0;
  background-color: transparent;
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: start;
  align-items: center;
  font-size: 32rpx;
  font-weight: normal;
  flex-grow: 1;
}