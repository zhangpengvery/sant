/* pages/accedetail/accedetail.wxss */
@import "/assets/fonts/iconfont.wxss";
page{
  background: #f6f6f6;
}
.detail-swp{
  width: 100%;
  height: 480rpx;
}
.detail-swp image{
  width: 100%;
  height: 100%;
  background: #f6f6f6;
}
.details{
  width: 90%;
  height: 160rpx;
  padding: 30rpx 5%;
  border-radius: 20rpx 20rpx 0 0;
  background: #fff;
}
.details .details-text{
  position: relative;
  font-size: 34rpx;
  font-weight: bold;
  color: #333333;
}
.details-text .iconfont{
  position: absolute;
  right: 0;
  top: 0;
  color: #F9B236;
}
.details-jg{
  font-size: 34rpx;
  font-weight: bold;
  color: #BA1515;
  margin-top: 10rpx;
}
.details-bzd{
  display: flex;
  justify-content: space-between;
  color: #999;
  font-size: 24rpx;
  margin-top: 30rpx;
}
.details-fw{
  display: flex;
  justify-content: space-between;
  width: 90%;
  padding: 0 5%;
  height: 66rpx;
  background: #fcfcfc;
  border-radius: 0px 0px 20rpx 20rpx;
  font-size: 22rpx;
  color: #333;
  line-height: 66rpx;
  margin-bottom: 20rpx;
}
.fw-flex{
  display: flex;
}
.fw-flex .iconfont{
  color: #f00;
  margin-right: 5rpx;
}
.gclc{
  width: 90%;
  padding: 0 5%;
  height: 368rpx;
  background: #fff;
  border-radius: 20rpx;
  overflow: hidden;
  margin-bottom: 20rpx;
}
.gclc-title{
  display: flex;align-items: center;
  font-size: 30rpx;
  font-weight: bold;
  margin: 20rpx 0 40rpx 0;
}
.gclc-title .dian{
  background: #F9B236;
  width: 8rpx;
  height: 28rpx;
  border-radius: 328rpx;
  margin-right: 10rpx;
}
.gclc-icon{
  display: flex;
  justify-content: space-between;
  width: 94%;
  height: 200rpx;
  margin: 0 3%;
}
.icon-left{
  width: 20%;
  text-align: center;
  align-items: center;
}
.icon-left .yuan{
  width: 80rpx;
  height: 80rpx;
  line-height: 80rpx;
  background: #DAE6F5;
  border-radius: 50%;
  margin-left: 24rpx;
  font-size: 50rpx;
  color: #4596D4;
}
.icon-left .xiandan{
  color: #333;
  font-size: 30rpx;
  margin: 20rpx 0;
}
.icon-left .dingj{
  color: #b5b5b5;
  font-size: 22rpx;
}
.reviews{
  width: 90%;
  padding: 30rpx 5%;
  background: #fff;
  height: 740rpx;
  border-radius: 20rpx;
  margin-bottom: 20rpx;
}
.reviews-title{
  display: flex;
  justify-content: space-between;
}
.title-left{
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
}
.title-right{
  font-size: 24rpx;
  color: #F9B236;
}
.pinglun{
  height: 220rpx;
  position: relative;
}
.user{
  display: flex;
  height: 60rpx;
  line-height: 60rpx;
  margin: 30rpx 0;
}
.user .user-tx{
  width:60rpx;
  height: 60rpx;
  border-radius: 50%;
  background: #000;
  margin-right: 20rpx;
}
.user .user-name{
  color: #333;
  font-size: 26rpx;
}
.user-text{
  color: #333;
  font-size: 24rpx;
  margin-left: 85rpx;
}
.time{
  position: absolute;
  bottom: 0;
  right: 0;
  color: #333;
  font-size: 24rpx;
}
.xian{
  width: 86%;
  margin: 42rpx 7% 30rpx 7%;
  border-bottom: 1rpx solid #707070;
}
.allreviews{
  margin-top: 50rpx;
  width: 30%;
  padding: 0 35%;
}
.allreviews-box{
  width: 100%;
  height: 50rpx;
  border-radius: 160rpx;
  border: 2rpx solid #F9B236;
  color: #F9B236;
  font-size: 24rpx;
  text-align: center;
  line-height: 50rpx;
}
.cpxq-text{
  color: #989898;
  font-size: 24rpx;
  height: 40rpx;
  text-align: center;
}
.footer{
  margin-bottom: 65rpx;
}
.footer-dw{
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 120rpx;
  display: flex;
  justify-content: space-around;
  background: #fff;
  align-items: center;
}
.footer-left{
  flex: 1;
  text-align: center;
  color: #333;
  font-size: 22rpx;
}
.footer-dw .footer-left .iconfont{
  font-size: 40rpx;
}
.footer-dw .footer-right{
  height: 80rpx;
  flex: 2;
  background: #F9B236;
  border-radius: 94rpx;
  text-align: center;
  line-height: 80rpx;
  color: #fff;
  font-size: 32rpx;
  font-weight: bold;
  margin: 0 20rpx;
}
.list-xin{
  color: #F9B236;
}