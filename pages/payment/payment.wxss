/* pages/payment/payment.wxss */
@import "/assets/fonts/iconfont.wxss";
page{
  background: #f6f6f6;
}
.back{
  position: fixed;
  left: 30rpx;
  font-size: 32rpx;
}
.header{
  width: 100%;
  height: 420rpx;
  overflow: hidden;
  background: linear-gradient(154deg, #FFC765 0%, #FC9E32 100%);
}
.header-box{
  display: flex;
  justify-content: center;
  margin: 180rpx 0 60rpx 0;
  align-items: center;
}
.header-box .iconfont{
  color: #fff;
  font-size: 90rpx;
  margin-right: 20rpx;
}
.header-text{
  color: #fff;
}
.text-one{
  font-size: 40rpx;
}
.text-tow{
  font-size: 28rpx;
}
.xian{
  width: 90%;
  margin: 0 5%;
  height: 16rpx;
  background: #D27307;
  border-radius: 170rpx;
}
.content{
  width: 82%;
  margin: -74rpx 7% 0 7%;
  height: 400rpx;
  padding: 0 2%;
  background: #fff;
}
.con-jg{
  color: #fff;
  font-size: 54rpx;
  color: #EC5D27;
  text-align: center;
  height: 140rpx;
  border-bottom: 1rpx dashed #C7C7C7;
  line-height: 140rpx;
  font-weight: bold;
  margin-bottom: 70rpx;
}
.content-box{
  display: flex;
  justify-content: end;
  font-size: 28rpx;
  height: 60rpx;
}
.box-left{
  color: #333;
}
.box-right{
  color: #9a9a9a;
}
.footer{
  width: 86%;
  margin:70rpx 7% 0 7%;
  display: flex;
  justify-content: space-between;
}
.footer-box{
  width: 45%;
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  border: 1px solid #F9B236;
  font-size: 32rpx;
  color: #F9B236;
  border-radius: 94rpx;
}