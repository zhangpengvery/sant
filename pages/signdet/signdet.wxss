/* pages/signdet/signdet.wxss */
@import "/assets/fonts/iconfont.wxss";
.map-box{
  position: relative;
}
.user{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 580rpx;
  background: linear-gradient(180deg, rgba(255, 255, 255, 0) 0%, rgba(255, 255, 255, 0.38) 67%, rgba(255, 255, 255, 0.7) 100%);
}
.user-tx{
  position: absolute;
  bottom: 20rpx;
  left: 30rpx;
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
}
.user-tx image{
  width: 100%;
  height: 100%;
  border-radius: 50%;
}
.user-name{
  position: absolute;
  bottom: 60rpx;
  left: 170rpx;
  font-size: 36rpx;
  font-weight: bold;
}
.list-time{
  margin-left: 60rpx;
  color: #777;
  font-size: 24rpx;
  height: 60rpx;
  line-height: 66rpx;
}
.list{
  width: 94%;
  margin: 0 3%;
  height:auto;
  overflow: hidden;
}
.list-box{
  width: 98%;
  margin: 0 1% 5rpx 1%;
  border-radius: 16rpx;
  box-shadow: 0px 0px 3px rgba(0, 0, 0, 0.16);
  margin-top: 10rpx;
}
.list-header{
  width: 100%;
  height: 100rpx;
  display: flex;
  justify-content: end;
  align-items: center;
  border-bottom: 1rpx solid #f4f4f4;
}
.list-tx{
  font-size: 32rpx;
  font-weight: bold;
  margin: 0 10rpx 0 20rpx;
}
.list-img{
  width: 120rpx;
  height: 120rpx;
  margin: 20rpx 20rpx 0 0;
  border: 1rpx solid #ccc;
}
.list-tx image{
  width: 100%;
  height: 100%;
  border-radius: 50%;
}
.list-name{
  color: #343232;
  font-size: 32rpx;
  font-weight: bold;
}
.list-content{
  width: 94%;
  padding: 20rpx 3%;
}
.list-title{
  font-size: 26rpx;
  color: #777777;
}
.list-text{
  font-size: 28rpx;
  color: #333;
  margin-top: 8rpx;
}