/* pages/postjob/postjob.wxss */
@import "/assets/fonts/iconfont.wxss";
page{
  background: #F6F6F6;
}
.content{
  width: 90%;
  padding: 0 5%;
  overflow: hidden;
  background: #fff;
}
.box{
  display: flex;
  height: 60rpx;
  margin-top: 30rpx;
}
.box2{
  height: 270rpx;
}
.box .box-inp{
  border-bottom: 2rpx solid #DCDCDC;
}
.box-title{
  width: 22%;
  color: #333;
  font-size: 30rpx;
}
.box-inp{
  width: 78%;
  position: relative;
}
.box .box-da{
  height: 260rpx;
  border: 0;
}
.box-inp input{
  font-size: 26rpx;
}
.da-inp{
  font-size: 26rpx;
  width: 520rpx;
  height: 260rpx;
}
.box-inp .iconfont{
  position: absolute;
  top: 0;
  right: 0;
  font-size: 26rpx;
  color: #F9B236;
}
.picker{
  color: #F9B236;
  font-size: 26rpx;
} 
.ljfb{
  position: fixed;
  bottom: 40rpx;
  left: 0;
  width: 94%;
  margin: 0 3%;
  height: 94rpx;
  border-radius: 94rpx;
  background: #F9B236;
  color: #fff;
  text-align: center;
  line-height: 94rpx;
  font-size: 32rpx;
  font-weight: bold;
  z-index: 10;
}
.box-footer{
  display: flex;
  justify-content: space-between;
  height: 80rpx;
  line-height: 80rpx;
}
.box-footer .switchcss{
  zoom: .6;
}
.footer-text{
  color: #333;
  font-size: 30rpx;
}
.showcity{
  display: flex;
  position: fixed;
  bottom: 0;
  left: 0;
  width: 94%;
  height: 500rpx;
  padding: 0 3%;
  background: #fff;
  z-index: 10;
}
.showcity .city-content{
  width: 100%;
  height: 100%;
}
.city-content .city-box{
  width: 100%;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  font-size: 26rpx;
}
.city-content .cityac{
  color: #F9B236;
}
.showcity .cityright{
  width: 35%;
  height: auto;
}
.showcity .cityright .right-box{
  height: 50rpx;
  line-height: 50rpx;
  font-size: 26rpx;
  overflow: hidden;
  text-align: center;
}