/* pages/hiredetail/hiredetail.wxss */
page{
  background: #F6F6F6;
}
.content{
  position: relative;
  width: 94%;
  height: auto;
  margin: 0 3% 160rpx 3%;
}
.header-img{
  width: 100%;
  height: 350rpx;
}
.lunbonum{
  position: absolute;
  right: 30rpx;
  top: 270rpx;
  width: 80rpx;
  height: 30rpx;
  background: rgba(51, 51, 51, 0.6);
  color: #fff;
  font-size: 20rpx;
  text-align: center;
  line-height: 30rpx;
  border-radius: 14rpx;
  z-index: 10;
}
.header-img image{
  width: 100%;
  height: 100%;
  border-radius: 20rpx 20rpx 0 0;
}
.content-detail{
  width: 94%;
  padding: 30rpx 3%;
  border-radius:  0 0 20rpx 20rpx;
  font-size: 34rpx;
  overflow: hidden;
  background: #fff;
}
.content-detail .detail-title{
  color: #333;
  font-weight: bold;
}
.content-detail .detail-jg{
  height: 50rpx;
  line-height: 40rpx;
  margin: 20rpx 0;
  color: #BA1515;
  font-weight: bold;
}
.content-detail .detail-jg::before{
  content: "ï¿¥";
}
.content-detail .detail-xq{
  word-break: normal;
  width: 100%;
  font-size: 26rpx;
  color: #999;
}
.content-user{
  margin-top: 20rpx;
  border-radius: 20rpx;
  width: 94%;
  height: 326rpx;
  padding: 0 3%;
  background: #fff;
}
.content-user .user-name{
  color: #333;
  font-size: 26rpx;
  height: 81rpx;
  line-height: 81rpx;
  width: 100%;
  border-bottom: 2rpx solid #f4f4f4;
}
.footer{
  width: 94%;
  padding: 20rpx 3%;
  position: fixed;
  display: flex;
  bottom: 0;
  left: 0;
  height: 100rpx;
  align-items: center;
  background: #fff;
}
.footer .footer-left{
  flex: 1;
  text-align: center;
  color: #F9B236;
  font-size: 22rpx;
}
.footer .footer-left .iconfont{
  font-size: 50rpx;
}
.footer .footer-right{
  height: 100rpx;
  flex: 3;
  background: #F9B236;
  border-radius: 94rpx;
  text-align: center;
  line-height: 100rpx;
  color: #fff;
  font-size: 32rpx;
  font-weight: bold;
}