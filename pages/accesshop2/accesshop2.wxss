/* pages/accesshop2/accesshop2.wxss */
.category{
  width: 100%;
  height: 100%;
  display: flex;
}
.category-left{
  width: 20%;
  background: #F6F6F6;
}
.category-nav{
  width: 100%;
  height: 88rpx;
  border-radius: 28rpx 0rpx 0rpx 28rpx;
  text-align: center;
  line-height: 88rpx;
  color: #999;
  font-size: 24rpx;
}
.active{
  background: #fff;
  color: #F9B236;
}
.category-right{
  width: 80%;
}
.right-text{
  width: 97%;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 28rpx;
  font-weight: bold;
  margin-left: 3%;
}
.content{
  width: 100%;
  display: flex;
  flex-wrap: wrap;
}
.right-content{
  position: relative;
  width: 30%;
  height: 210rpx;
  background: #f9f9f9;
  border-radius: 16rpx;
  margin:0 0 20rpx 16rpx;
  text-align: center;
}
.con-img{
  margin-top: 10rpx;
  width: 100%;
  height: 130rpx;
}
.con-img image{
  width: 100%;
  height: 100%;
}
.con-name{
  font-size: 20rpx;
  color: #333;
  margin: 10rpx 0 5rpx 0;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.con-price{
  font-size: 20rpx;
  color: #333;
  font-weight: bold;
}
.dixian{
  width: 100%;
  height: 50rpx;
  text-align: center;
  font-size: 24rpx;
  color: #ababab;
  margin-bottom: 130rpx;
}
.wushujucs{
  width: 100%;
  margin-top: 300rpx;
  text-align: center;
  font-size: 24rpx;
  color: #ababab;
}
.wushu-img{
  width: 44%;
  margin: 0 28%;
  height: 180rpx;
}
.wushu-img image{
  width: 100%;
  height: 100%;
}
.tabbar{
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  position: fixed;
  bottom: 0;
  left: 0;
  height: 118rpx;
  background-image: url(https://jbccs.com/./Upload/image/2021-05-07/6094b55ac7b98.png);
  background-repeat:no-repeat; 
  background-size:100% 100%;
}
.tabbar-box{
  width: 20%;
  height: 100rpx;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  align-items: center;
}
.tabbar-img{
  width: 54rpx;
  height: 54rpx;
}
.tabbar-text{
  font-size: 24rpx;
}
.tabbar-gif{
  width: 100rpx;
  height: 100rpx;
  position: absolute;
  top: -34rpx;
  left: 50%;
  margin-left: -50rpx;
}