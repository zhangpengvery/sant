/* pages/accesshop/accesshop.wxss */
.category{
  width: 100%;
  height: 100%;
  display: flex;
}
.category-left{
  width: 25%;
  background: #F6F6F6;
}
.category-nav{
  width: 100%;
  height: 88rpx;
  border-radius: 28rpx 0rpx 0rpx 28rpx;
  text-align: center;
  line-height: 88rpx;
  color: #999;
  font-size: 24rpx;
}
.active{
  background: #fff;
  color: #F9B236;
}
.category-right{
  width: 69%;
  padding: 0 3%;
}
.right-text{
  width: 97%;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 28rpx;
  font-weight: bold;
}
.content{
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}
.right-content{
  position: relative;
  width: 48%;
  height: 172rpx;
  background: linear-gradient(314deg, rgba(255, 255, 255, 0.24) 0%, #D5D5D5 100%);
  border-radius: 20rpx;
  margin-bottom: 20rpx;
}
.right-content .con-rb{
  width: 76rpx;
  height: 40rpx;
  position: absolute;
  bottom: 0;
  right: 0;
  border-radius: 20rpx 0rpx 20rpx 0rpx;
  z-index: 10;
  background: linear-gradient(180deg, #F9B236 0%, #F96B36 100%);
}
.sanj{
  position: absolute;
  bottom: 40rpx;
  right: 0;
  width: 0;
  height: 0;
  border-bottom: 12rpx solid #F9B236;
  border-left: 60rpx solid transparent;
  z-index: 10;
}
.right-content .con-bottom{
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 30rpx;
  background: #F9B236;
  border-radius: 0 0 20rpx 20rpx;
}
.right-content image{
  width: 100%;
  height: 100%;
}
.con-name{
  position: absolute;
  bottom: 2rpx;
  left: 20%;
  font-size: 18rpx;
  color: #fff;
}
.con-price{
  position: absolute;
  bottom: 4rpx;
  right: 8rpx;
  font-size: 16rpx;
  color: #fff;
  z-index: 20;
}