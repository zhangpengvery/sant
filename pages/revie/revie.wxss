/* pages/revie/revie.wxss */
.header{
  width: 92%;
  height: 100rpx;
  padding: 0 4%;
  display: flex;
  justify-content: space-between;
  line-height: 100rpx;
  background: #fff;
  align-items: center;
}
.navber-content{
	position: relative;
  width: 350rpx;
  font-size: 24rpx;
}
.navber-content input{
  padding-left: 60rpx;
  border-radius: 136rpx;
  width: 260rpx;
  height: 60rpx;
  background: #f5f5f5;
  font-size: 26rpx;
}
.navber-content .searchicon{
  position: absolute;
  bottom: -20rpx;
  left: 20rpx;
  color: #1A1311;
  font-size: 24rpx;
}
.sosuo{
	width: 100rpx;
	height: 60rpx;
	border-radius: 30rpx;
	line-height: 60rpx;
  margin-left: 10rpx;
  color: #333;
  font-size: 28rpx;
  text-align: center;
  background: #F4F4F4;
}
.picbox{
	display: flex;
	justify-content: center;
	align-items: center;
}
.city{
  font-size: 26rpx;
}
.title-box{
	display: flex;
	width: 92%;
	padding: 0 4%;
	height: 48rpx;
	background: #F4F4F4;
	justify-content: space-between;
	font-size: 24rpx;
	align-items: center;
}
.content{
  display: flex;
  justify-content: space-between;
  width: 92%;
  height: 88rpx;
  margin: 0 4%;
  border-bottom: 2rpx solid #E6E6E6;
  font-size: 24rpx;
  align-items: center;
}
.user-tx{
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.yuan{
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
}
.yuan image{
  width: 100%;
  height: 100%;
  border-radius: 50%;
}
.user-name{
  font-size: 24rpx;
  color: #333;
}
.user-text{
	color: #777777;
	margin: 0 10rpx 0 4rpx;
}
.db-time{
  color: #333;
  font-size: 24rpx;
}
.db-address{
  color: #333;
}
.footer{
	width: 100%;
	height: 120rpx;
	display: flex;
	align-items: center;
	justify-content: center;
	position: fixed;
	bottom: 0;
	left: 0;
	box-shadow: 0px -3px 6px rgba(0, 0, 0, 0.06);
}
.footer-btn{
	width: 360rpx;
	height: 88rpx;
	border-radius: 44rpx;
	background: #F9B236;
	text-align: center;
	line-height: 88rpx;
	font-size: 34rpx;
	color: #fff;
}
.wushujucs{
  margin-top: 300rpx;
  width: 100%;
  text-align: center;
  font-size: 24rpx;
  color: #ababab;
}
.wushu-img{
  width: 44%;
  margin: 0 28%;
  height: 180rpx;
}
.wushu-img image{
  width: 100%;
  height: 100%;
}
.max-mask{
  width: 100%;
  height: 100%;
  position: fixed;
  bottom: 0;
  left: 0;
  background: #000;
  z-index: 3;
  opacity: 0.7;
 }