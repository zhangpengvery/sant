/* pages/counter/counter.wxss */
page{
  background: #F4F4F4;
}
.home-navimg{
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 460rpx;
  z-index: -1;
}
.home-navimg image{
  width: 100%;
  height: 100%;
}
.header{
  width: 94%;
  height: 100rpx;
  padding: 0 3%;
  display: flex;
  justify-content: center;
  line-height: 40rpx;
  align-items: center;
  text-align: center;
}
.nav-box{
  width: 18%;
  font-size: 26rpx;
}
.active{
  font-weight: bold;
  font-size: 30rpx;
}
.box-inp .iconfont{
  position: absolute;
  top: 0;
  right: 120rpx;
  font-size: 26rpx;
  color: #F9B236;
}
.picker{
  color: #F9B236;
  font-size: 26rpx;
}
.header-box{
  width: 86%;
  /* height: 260rpx; */
  margin:  0 3%;
  padding: 0 4%;
  border-radius: 20rpx;
  background: #fff;
  overflow: hidden;
}
.box{
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 60rpx;
  margin: 15rpx 0 0 0;
  padding-bottom: 15rpx;
  border-bottom: 1rpx solid #f4f4f4;
}
.box-title{
  width: 35%;
  color: #333;
  font-size: 28rpx;
}
.box-inp{
  width: 30%;
  position: relative;
}
.box-inp input{
  font-size: 26rpx;
}
.btn{
  width: 94%;
  margin: 20rpx 3%;
  display: flex;
  justify-content: space-between;
  font-size: 32rpx;
}
.btn-left{
  width: 48%;
  height: 90rpx;
  background: #858380;
  color: #fff;
  text-align: center;
  line-height: 90rpx;
  border-radius: 200rpx;
}
.btn-right{
  background: #F9B236;
}