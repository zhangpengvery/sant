/* pages/home/home.wxss */
@import "/assets/fonts/iconfont.wxss";
.home-navimg{
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 366rpx;
  z-index: -1;
  transition: all 2s ;
}
.home-navimg image{
  width: 100%;
  height: 100%;
}
.header{
  position: relative;
  color: #fff;
  font-size: 30rpx;
  margin-left: 3%;
  z-index: 1;
}
.home-swiper{
  height: 400rpx;
  width: 94%;
  margin: 0 3%;
}
.home-swiper swiper-item .home-conent{
  height: 340rpx;
  width: 100%;
  border-radius: 15px;
}
.home-swiper swiper-item .home-conent image{
  width: 100%;
  height: 100%;
  border-radius: 15px;
}
.icon-fater{
  position: relative;
  width: 94%;
  height: 336rpx;
  display: flex;
  justify-content: space-around;
  flex-wrap: wrap;
  text-align: center;
  margin: 0 3%;
  margin-top: 20rpx;
  background: #FFFFFF;
  box-shadow: 0px 3px 6px rgba(0, 0, 0, 0.16);
  border-radius: 14px;
  z-index: 1;
}
.icon-fater .icon-conent{
  display: flex;
  justify-content: center;
  flex-direction: column;
  width: 25%;
  height: 168rpx;
}
.icon-fater .icon-conent text{
  color: #343232;
  font-size: 24rpx;
  font-weight: 400;
}
.icon-fater .icon-conent .icon-img{
  width: 80rpx;
  height: 80rpx;
  line-height: 102rpx;
  margin-left: 49rpx;
  margin-bottom: 15rpx;
  box-shadow: 0px 3px 6px rgba(0, 0, 0, 0.1);
  border-radius: 50%;
}
.icon-fater .icon-conent .icon-img image{
  width: 48rpx;
  height: 44rpx;
}
.home-options{
  width: 94%;
  margin: 0 3%;
  height: 100rpx;
  display: flex;
  position: relative;
  line-height: 100rpx;
}
.home-options .zuo{
  position: absolute;
  top: 50%;
  width: 8rpx;
  height: 36rpx;
  margin-top: -18rpx;
  background-color: #F9B236;
}
.home-options text{
  display: block;
  margin-left: 20rpx;
  color: #343232;
  font-size: 17px;
  font-weight: bold;
}
.bp-fater{
  display: flex;
  width: 94%;
  height:198rpx;
  margin: 0 3%;
  justify-content: space-between;
}
.bp-fater .bp-img{
  width: 48%;
}
.bp-fater .bp-img image{
  width: 100%;
  height: 100%;
  border-radius: 20rpx;
}
.hhl-fater{
  display: flex;
  width: 94%;
  height: 400rpx;
  margin: 0 3%;
  justify-content: space-between;
}
.hhl-fater .h-img{
  width: 48%;
}
.hhl-fater .hl-img{
  width: 48%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.hhl-fater .hl-img .huang-img{
  height: 47%;
}
.hhl-fater image{
  width: 100%;
  height: 100%;
  border-radius: 20rpx;
}
.options-fater{
  width: 960rpx;
  height: 350rpx;
  text-align: center;
}
.options-fater .options-child{
  position: relative;
  width: 280rpx;
  height: 350rpx;
  float: left;
  display: flex;
  flex-direction: column;
  box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.07);
  border-radius: 20rpx;
  margin-left: 3%;
  margin-top: 20rpx;
}
.img-box{
  width: 80%;
  height: 200rpx;
  padding: 10%;
}
.img-box image{
  width: 100%;
  height: 100%;
}
.child-footer{
  width: 100%;
  height: 92rpx;
  box-shadow: 0px 0px 20rpx rgba(0, 0, 0, 0.07);
}
.child-footer .options-price{
  color: #D90F0F;
  font-size: 26rpx;
}
.options-name{
  font-size: 26rpx;
  height: 50rpx;
  line-height: 50rpx;
}
.options-fater .options-child .options-price::before {
  content: "￥";
  color: #D90F0F;
}
.options-fater .options-child .options-rm{
  position: absolute;
  top: 0;
  left: 0;
  width: 72rpx;
  height: 32rpx;
  background: linear-gradient(90deg, #F12D2D 0%, #FFB639 100%);
  border-radius: 20rpx 0px 20rpx 0px;
  color: #fff;
  font-size: 19rpx;
  line-height: 32rpx;
  text-align: center;
}
.urgent{
  position: fixed;
  display: flex;
  right: 0;
  bottom: 200rpx;
  height: 90rpx;
  width: 120rpx;
  border-radius: 50rpx 0 0 50rpx;
  background: #F9B236;
  color: #fff;
  text-align: center;
  align-items: center;
}
.urgent .iconfont{
  width: 60%;
  margin-left: 10%;
  font-size: 40rpx;
}
.urgent-text{
  font-size: 20rpx;
}
.service{
  position: fixed;
  display: flex;
  right: 0;
  bottom: 100rpx;
  height: 90rpx;
  line-height: 90rpx;
  width: 120rpx;
  border-radius: 50rpx 0 0 50rpx;
  background: #F9B236;
  color: #fff;
  text-align: center;
}
.service .iconfont{
  width: 50%;
  margin-left: 10%;
  font-size: 40rpx;
}
@import "/assets/fonts/iconfont.wxss";
.list{
  width: 94%;
  height: auto;
  margin: 0 3%;
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
  text-align: center;
}
.list .list-content{
  position: relative;
  width: 44%;
  height: 295rpx;
  padding: 2%;
  border-radius: 20rpx;
  box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.07);
  margin-bottom: 20rpx;
}
.list .list-content image{
  width: 284rpx;
  height: 175rpx;
  border-radius: 10rpx 10rpx 0 0;
  margin-top: 10rpx;
}
.list .list-content .list-name{
  text-align: left;
  padding-left: 3%;
  width: 93%;
  font-size: 28rpx;
  color: #343232;
  height: 40rpx;
  display: block;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin: 10rpx 0 5rpx 0;
}
.list .list-content .list-price{
  display: block;
  padding-left: 3%;
  width: 93%;
  text-align: left;
  font-size: 28rpx;
  color: #D90F0F;
}
.list .list-content .list-price ::before{
  content: "￥";
}
.list .list-content .list-xin{
  position: absolute;
  font-size: 24rpx;
  bottom: 30rpx;
  right: 30rpx;
  color: #F9B236;
}
.dixian{
  width: 100%;
  height: 50rpx;
  text-align: center;
  font-size: 24rpx;
  color: #ababab;
}