<!--pages/home/home.wxml-->
<navbar params="{{params}}" />
<scroll-view scroll-y="true" style="height:{{winH}}px" bindscrolltolower="loadMore" bindscroll="scrollPage">
  <view class="header" style="margin-top:{{navH}}rpx">
    <text>服务创造价值!</text>
  </view>
  <view class="home-navimg" hidden="{{hidden}}">
    <image src="/assets/images/sybj.png"></image>
  </view>
  <!-- 小图标 -->
  <view class="icon-fater">
    <block wx:for="{{getIndexIcons}}" wx:key="index">
      <view class="icon-conent">
        <navigator url="{{item.url}}">
          <view class="icon-img">
            <image src="{{item.icon}}"></image>
          </view>
        </navigator>
        <text>{{item.text}}</text>
      </view>
    </block>
  </view>
  <!-- 保养服务 -->
  <view class="home-options">
    <view class="zuo"></view>
    <text>保养服务</text>
  </view>
  <!-- 蓝粉双图 -->
  <navigator url="/pages/maintain/maintain">
    <view class="bp-fater">
      <view class="bp-img">
        <image src="/assets/images/pinkt.png"></image>
      </view>
      <view class="bp-img">
        <image src="/assets/images/bluet.png"></image>
      </view>
    </view>
  </navigator>
  <!-- 热卖配件 -->
  <view class="home-options">
    <view class="zuo"></view>
    <text>热卖配件</text>
  </view>
  <scroll-view scroll-x="true" style="height: 400rpx">
    <view class="options-fater">
      <block wx:for="{{getSwiperImages}}" wx:key="index">
        <view class="options-child">
          <navigator url="/pages/peijdetail/peijdetail?good_id={{item.good_id}}">
            <view class="img-box">
              <image src="{{item.good_image}}"></image>
            </view>
          </navigator>
          <view class="child-footer">
            <view class="options-name">{{item.good_name}}</view>
            <view class="options-price">{{item.good_price}}</view>
          </view>
          <view class="options-rm">热卖</view>
        </view>
      </block>
    </view>
  </scroll-view>
  <!-- 限时促销 -->
  <view class="home-options">
    <view class="zuo"></view>
    <text>限时促销</text>
  </view>
  <!-- 红黄蓝三图 -->
  <view class="hhl-fater">
    <view class="h-img" bindtap="bindSanqFn">
      <image src="/assets/images/20201221165446.png"></image>
    </view>
    <view class="hl-img">
      <view class="huang-img" bindtap="bindJiefFn">
        <image src="/assets/images/20201221165508.png"></image>
      </view>
      <view class="huang-img" bindtap="bindTangFn">
        <image src="/assets/images/20201221165531.png"></image>
      </view>
    </view>
  </view>
  <!-- 二手车推荐 -->
  <view class="home-options">
    <view class="zuo"></view>
    <text>二手车推荐</text>
  </view>
  <view class="list">
    <block wx:for="{{listData}}" wx:key="index">
      <view class="list-content">
        <navigator url="/pages/saledetail/saledetail?sale_id={{item.sale_id}}">
          <image mode="aspectFill" src="{{item.image_url}}"></image>
        </navigator>
        <text class="list-name">{{item.sale_title}}</text>
        <text class="list-price">{{item.sale_price}}</text>
        <view wx:if="{{item.favor_data==item.sale_id}}" class="iconfont icon-xin-xuanzhong list-xin"
          bindtap="qiehuanFn" data-index="{{index}}" data-sale_id="{{item.sale_id}}"></view>
        <view class="iconfont icon-xin-moren list-xin" wx:else  bindtap="shoucFn" data-sale_id="{{item.sale_id}}" data-index="{{index}}"></view>
      </view>
    </block>
  </view>
  <view wx:if="{{dixian}}" class="dixian">我也是有底线的！</view>
</scroll-view>
<view class="urgent" bindtap="urgentFn">
  <view class="iconfont icon-dianhua"></view>
  <view class="urgent-text">紧急救援</view>
</view>
<view class="service" bindtap="serviceFn">
  <view class="iconfont icon-quanminjingjiren"></view>
  <view class="urgent-text">客服</view>
</view>