<!--pages/live/live.wxml-->
<view class="header">
  <view class="title {{active==0?'active':''}}" data-id="0" bindtap="bindTabFn">
    <text>推荐</text>
    <view class="xian" wx:if="{{active==0}}"></view>
  </view>
  <view class="title {{active==1?'active':''}}" data-id="1" bindtap="bindTabFn">
    <text>已发布</text>
    <view class="xian" wx:if="{{active==1}}"></view>
  </view>
  <view class="title {{active==2?'active':''}}" data-id="2" bindtap="bindTabFn">
    <text>喜欢</text>
    <view class="xian" wx:if="{{active==2}}"></view>
  </view>
</view>
<scroll-view scroll-y="true" style="height:{{winH}}px" bindscrolltolower="loadMore2">
  <view class="list" wx:if="{{active==0}}">
    <block wx:for="{{getVideoList}}" wx:key="index">
      <view class="list-content">
        <navigator url="/pages/swvideos/swvideos?id={{item.id}}">
          <image mode="aspectFill" src="{{item.articlepic}}"></image>
        </navigator>
        <text class="list-name">{{item.title}}</text>
      </view>
    </block>
  </view>
</scroll-view>
