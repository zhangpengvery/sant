/* pages/live/live.wxss */
@import "/assets/fonts/iconfont.wxss";
page{
  background: #f4f4f4;
}
.header{
  width: 60%;
  height: 80rpx;
  line-height: 80rpx;
  margin: 0 20%;
  display: flex;
  justify-content: space-between;
  color: #a2a2a2;
  font-size: 32rpx;
}
.title{
  position: relative;
}
.active{
  color: #333;
}
.xian{
  width: 40rpx;
  border-bottom: 4rpx solid #333;
  position: absolute;
  bottom: 0;
  left: 50%;
  margin-left: -20rpx;
}
.list{
  width: 94%;
  height: auto;
  margin: 0 3%;
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
  text-align: center;
}
.list .list-content{
  position: relative;
  width: 48%;
  height: 340rpx;
  border-radius: 20rpx;
  box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.07);
  margin-top: 20rpx;
}
.list .list-content image{
  width: 100%;
  height: 200rpx;
  border-radius: 10rpx 10rpx 0 0;
}
.list .list-content .list-name{
  text-align: left;
  padding:0 5% 0 5%;
  width: 90%;
  font-size: 26rpx;
  color: #343232;
  height: 70rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  margin: 10rpx 0 5rpx 0;
}
.list .list-content .list-xin{
  position: absolute;
  font-size: 24rpx;
  bottom: 24rpx;
  right: 30rpx;
  color: #F9B236;
}
.dixian{
  width: 100%;
  height: 50rpx;
  text-align: center;
  font-size: 24rpx;
  color: #ababab;
}